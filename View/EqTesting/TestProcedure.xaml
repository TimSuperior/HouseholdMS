<UserControl x:Class="HouseholdMS.View.EqTesting.TestProcedure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="900"
             MinWidth="720" MinHeight="480"
             Focusable="True"
             KeyDown="Root_KeyDown">

    <UserControl.Resources>
        <!-- Album button -->
        <Style x:Key="AlbumButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="#FFFFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="16" SnapsToDevicePixels="True">
                            <Grid Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" Text="" FontSize="16" Foreground="#6B7280" Margin="12,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8FAFF"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#C7D2FE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#EEF2FF"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#A5B4FC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Footer nav buttons -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinWidth" Value="96"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="#111827" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="White"
                                              TextElement.FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1F2937"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#374151"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border x:Name="HeaderBar" Grid.Row="0" Background="#F7F9FC" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="12">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="HeaderTitle"   FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock x:Name="HeaderVersion" FontSize="12" Foreground="#6B7280"/>
                </StackPanel>
                <TextBlock x:Name="HeaderStep" DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="#6B7280" Margin="20,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- MAIN -->
        <Grid Grid.Row="1">
            <!-- HOME -->
            <ScrollViewer x:Name="HomeScroll" Visibility="Visible" Padding="16" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="PageList" Margin="0"/>
            </ScrollViewer>

            <!-- PROCEDURE (3 hosts, no margins) -->
            <Grid x:Name="ProcedureRoot" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Col1" Width="*"/>
                    <ColumnDefinition x:Name="Col2" Width="*"/>
                    <ColumnDefinition x:Name="Col3" Width="*"/>
                </Grid.ColumnDefinitions>

                <ContentPresenter x:Name="Part1Host" Grid.Column="0"/>
                <ContentPresenter x:Name="Part2Host" Grid.Column="1"/>
                <ContentPresenter x:Name="Part3Host" Grid.Column="2"/>
            </Grid>
        </Grid>

        <!-- FOOTER -->
        <Border x:Name="FooterBar" Grid.Row="2" Background="#F7F9FC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="10">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="HomeBtn" Content="Home" Style="{StaticResource NavButtonStyle}" Click="HomeBtn_Click"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="PrevBtn" Content="◀ Prev" Style="{StaticResource NavButtonStyle}" Click="PrevBtn_Click"/>
                    <Button x:Name="NextBtn" Content="Next ▶" Style="{StaticResource NavButtonStyle}" Margin="0" Click="NextBtn_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
