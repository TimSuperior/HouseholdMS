<UserControl x:Class="HouseholdMS.View.Dashboard.SitesView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctrls="clr-namespace:HouseholdMS.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="1200">

    <!-- ================= Palette & Styles ================= -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="Col.BgPage"   Color="#F7F7FB"/>
        <SolidColorBrush x:Key="Col.Card"     Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.Border"   Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Col.Text"     Color="#0F172A"/>
        <SolidColorBrush x:Key="Col.Muted"    Color="#64748B"/>
        <SolidColorBrush x:Key="Col.Accent"   Color="#6366F1"/>

        <!-- Compact tile -->
        <Style x:Key="TileButtonSmall" TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="MinWidth" Value="240"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                BorderBrush="#E6E6E9"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D0D0D7"/>
                                <Setter TargetName="bd" Property="Background" Value="#FAFAFC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F2F2F7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link-style breadcrumb button (MUTED + CLICKABLE; focus suppressed) -->
        <Style x:Key="LinkButton" TargetType="Button">
            <!-- keep it interactive but remove focus artifacts -->
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Muted}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="txt"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontWeight="SemiBold"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="txt" Property="TextDecorations" Value="Underline"/>
                                <Setter Property="Foreground" Value="{StaticResource Col.Accent}"/>
                            </Trigger>
                            <!-- explicitly keep muted when (somehow) keyboard focus lands here -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource Col.Muted}"/>
                                <Setter TargetName="txt" Property="TextDecorations" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost button (top-right) -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="Transparent"
                                BorderBrush="{StaticResource Col.Border}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FAFAFC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F2F3F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource Col.BgPage}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Header Card: Breadcrumb + Title + Back button ===== -->
        <Border Grid.Row="0"
                Margin="12,12,12,8"
                Background="{StaticResource Col.Card}"
                CornerRadius="14"
                BorderBrush="{StaticResource Col.Border}"
                BorderThickness="1">
            <Grid Margin="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: breadcrumb + title -->
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <!-- Breadcrumb row (Dashboard › Sites) -->
                    <DockPanel LastChildFill="False" VerticalAlignment="Center">
                        <!-- Dashboard (muted clickable link) -->
                        <Button Style="{StaticResource LinkButton}"
                                Content="Dashboard"
                                Click="BreadcrumbDashboard_Click"
                                ToolTip="Go to Dashboard"
                                DockPanel.Dock="Left"/>

                        <!-- Chevron -->
                        <TextBlock Text="›"
                                   FontSize="18"
                                   Foreground="{StaticResource Col.Muted}"
                                   Margin="10,0,10,0"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>

                        <!-- Active 'Sites' crumb (accent; not a button) -->
                        <Border BorderBrush="{StaticResource Col.Accent}"
                                BorderThickness="0,0,0,2"
                                Padding="0,0,0,2"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left">
                            <TextBlock Text="Sites"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Col.Accent}"/>
                        </Border>
                    </DockPanel>

                    <!-- Page title -->
                    <TextBlock x:Name="PageTitle"
                               Text="Sites"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,6,0,0"
                               Foreground="{StaticResource Col.Text}"/>
                </StackPanel>

                <!-- Right: Back to dashboard ghost button -->
                <Button Grid.Column="1"
                        Style="{StaticResource GhostButton}"
                        Click="BreadcrumbDashboard_Click"
                        ToolTip="Back to Dashboard (Alt+Left)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Back to Dashboard" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ===== Tiles ===== -->
        <Border Grid.Row="1"
                CornerRadius="14"
                Background="{StaticResource Col.Card}"
                BorderBrush="{StaticResource Col.Border}"
                BorderThickness="1"
                Margin="12,0,12,8">
            <UniformGrid Columns="3" Margin="8">
                <Button Style="{StaticResource TileButtonSmall}" Click="OpenAllSites_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Total Households" FontWeight="Bold"/>
                            <TextBlock x:Name="TotalCountText" Text="0" FontSize="32" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <Button Style="{StaticResource TileButtonSmall}" Click="OpenOperational_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Operational" FontWeight="Bold"/>
                            <TextBlock x:Name="OperationalCountText" Text="0" FontSize="28" Margin="0,4,0,0"/>
                        </StackPanel>

                        <ctrls:CircularProgressBar x:Name="OperationalProgress"
                                                   Width="64" Height="64"
                                                   StrokeThickness="8"
                                                   ProgressBrush="#4CAF50"
                                                   TrackBrush="#E6E6E6"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource TileButtonSmall}" Click="OpenOutOfService_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Out of Service" FontWeight="Bold"/>
                            <TextBlock x:Name="OutOfServiceCountText" Text="0" FontSize="28" Margin="0,4,0,0"/>
                        </StackPanel>

                        <ctrls:CircularProgressBar x:Name="OutOfServiceProgress"
                                                   Width="64" Height="64"
                                                   StrokeThickness="8"
                                                   ProgressBrush="#F44336"
                                                   TrackBrush="#E6E6E6"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </UniformGrid>
        </Border>

        <!-- ===== Embedded content host ===== -->
        <Border Grid.Row="2"
                CornerRadius="14"
                Background="{StaticResource Col.Card}"
                BorderBrush="{StaticResource Col.Border}"
                BorderThickness="1"
                Margin="12,0,12,12">
            <Grid>
                <ContentControl x:Name="DetailHost" />
                <TextBlock x:Name="Placeholder"
                           Text="Select a tile to show details here…"
                           Foreground="#8F95A1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
