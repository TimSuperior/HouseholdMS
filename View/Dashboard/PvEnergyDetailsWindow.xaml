<Window x:Class="HouseholdMS.View.Dashboard.PvEnergyDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PV Energy Details (PVGIS)" WindowStartupLocation="CenterOwner"
        MinWidth="720" MinHeight="460">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="⚡ Baseline PV Energy (PVGIS)"
                       FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Refresh" Margin="12,0,0,0" Padding="10,4" Click="Refresh_Click"/>
            <TextBlock x:Name="CfgText" Margin="16,0,0,0" Foreground="#666" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Monthly energy (kWh) and annual total" Foreground="#666" Margin="0,0,0,8"/>

            <DataGrid Grid.Row="1" x:Name="MonthGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Month" Binding="{Binding Month}"/>
                    <DataGridTextColumn Header="kWh" Binding="{Binding Kwh}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Annual -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <TextBlock Text="Annual: " FontWeight="Bold"/>
                <TextBlock x:Name="AnnualText" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Quick summary -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                <TextBlock Text="Specific yield: " />
                <TextBlock x:Name="SpecificYieldText" FontWeight="Bold" Margin="4,0,12,0"/>
                <TextBlock Text="Capacity factor: " />
                <TextBlock x:Name="CapacityFactorText" FontWeight="Bold" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
