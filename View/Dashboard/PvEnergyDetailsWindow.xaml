<Window x:Class="HouseholdMS.View.Dashboard.PvEnergyDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:HouseholdMS.Resources"
        Title="{x:Static res:Strings.PVEDW_Title}"
        WindowStartupLocation="CenterOwner"
        MinWidth="720" MinHeight="460">

    <DockPanel Margin="12">
        <!-- Header -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="{x:Static res:Strings.PVEDW_Header}"
                       FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="{x:Static res:Strings.PVEDW_Btn_Refresh}"
                    Margin="12,0,0,0" Padding="10,4" Click="Refresh_Click"/>
            <TextBlock x:Name="CfgText" Margin="16,0,0,0" Foreground="#666" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Subtitle -->
            <TextBlock Grid.Row="0"
                       Text="{x:Static res:Strings.PVEDW_MonthlyDesc}"
                       Foreground="#666" Margin="0,0,0,8"/>

            <!-- Monthly table -->
            <DataGrid Grid.Row="1" x:Name="MonthGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static res:Strings.PVEDW_Col_Month}" Binding="{Binding Month}"/>
                    <DataGridTextColumn Header="{x:Static res:Strings.PVEDW_Col_kWh}"   Binding="{Binding Kwh}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Annual -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <TextBlock Text="{x:Static res:Strings.PVEDW_Annual_Label}" FontWeight="Bold"/>
                <TextBlock x:Name="AnnualText" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Quick summary -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                <TextBlock Text="{x:Static res:Strings.PVEDW_SpecificYield}"/>
                <TextBlock x:Name="SpecificYieldText" FontWeight="Bold" Margin="4,0,12,0"/>
                <TextBlock Text="{x:Static res:Strings.PVEDW_CapacityFactor}"/>
                <TextBlock x:Name="CapacityFactorText" FontWeight="Bold" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
