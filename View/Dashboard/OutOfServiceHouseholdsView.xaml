<UserControl x:Class="HouseholdMS.View.Dashboard.OutOfServiceHouseholdsView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1200">

    <!-- ========== THEME & STYLES (clear selection, bigger rows, NO zebra) ========== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="Col.BgCard" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.BgPage" Color="#FFF9F9F9"/>
        <SolidColorBrush x:Key="Col.Border"  Color="#FFE5E7EB"/>
        <SolidColorBrush x:Key="Col.HeaderBg" Color="#FFF3F4F6"/>
        <SolidColorBrush x:Key="Col.HeaderFg" Color="#FF374151"/>
        <SolidColorBrush x:Key="Col.RowHover" Color="#FFF0F7FF"/>
        <SolidColorBrush x:Key="Col.RowSel"   Color="#FFDBEAFE"/>
        <SolidColorBrush x:Key="Col.RowSelBorder" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.Text"     Color="#FF111827"/>
        <SolidColorBrush x:Key="Col.TextMut"  Color="#FF6B7280"/>
        <SolidColorBrush x:Key="Col.Primary"  Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.PrimaryHover" Color="#FF2563EB"/>

        <!-- Search box -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chip-like button for "Columns" -->
        <Style x:Key="ChipButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="#FFF3F4F6"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="999"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{TemplateBinding Tag}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,10,0"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridView header -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource Col.HeaderBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.HeaderFg}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Generic cell text -->
        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- ListView row style -->
        <Style TargetType="ListViewItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="RowOuter"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Col.Border}"
                                BorderThickness="0,0,0,1"
                                Margin="4,2"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left selection bar -->
                                <Border x:Name="SelBar"
                                        Grid.Column="0"
                                        Background="{StaticResource Col.RowSelBorder}"
                                        CornerRadius="8,0,0,8"
                                        Visibility="Collapsed"/>

                                <!-- Row content -->
                                <GridViewRowPresenter Grid.Column="1"
                                                      Content="{TemplateBinding Content}"
                                                      Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=View.Columns}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowSel}"/>
                                <Setter TargetName="RowOuter" Property="BorderBrush" Value="{StaticResource Col.RowSelBorder}"/>
                                <Setter TargetName="RowOuter" Property="BorderThickness" Value="1"/>
                                <Setter TargetName="SelBar" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowHover}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status chip (clickable) -->
        <DataTemplate x:Key="StatusChipTemplate">
            <Border x:Name="Chip"
                    Padding="10,4"
                    CornerRadius="999"
                    Background="#FFE5E7EB"
                    HorizontalAlignment="Left"
                    ToolTip="{x:Static res:Strings.OOSV_Status_Tooltip}">
                <TextBlock Text="{Binding Statuss}"
                           Margin="0"
                           VerticalAlignment="Center"
                           Foreground="#FF374151"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Cursor="Hand"
                           MouseLeftButtonDown="StatusText_MouseLeftButtonDown"/>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Statuss}" Value="Operational">
                    <Setter TargetName="Chip" Property="Background" Value="#D1FAE5"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#A7F3D0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Statuss}" Value="In Service">
                    <Setter TargetName="Chip" Property="Background" Value="#FEF3C7"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FDE68A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Statuss}" Value="Not Operational">
                    <Setter TargetName="Chip" Property="Background" Value="#FEF3C7"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FDE68A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Statuss}" Value="Out of Service">
                    <Setter TargetName="Chip" Property="Background" Value="#FEE2E2"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FECACA"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <!-- ========== LAYOUT ========== -->
    <Border Background="{StaticResource Col.BgPage}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBox x:Name="SearchBox"
                         Style="{StaticResource SearchBoxStyle}"
                         Width="320"
                         VerticalContentAlignment="Center"
                         Foreground="{StaticResource Col.TextMut}"
                         FontStyle="Italic"
                         Tag="{x:Static res:Strings.OOSV_SearchPlaceholder}"
                         GotFocus="ClearText"
                         LostFocus="ResetText"
                         TextChanged="SearchBox_TextChanged"
                         DockPanel.Dock="Left"/>

                <!-- Column chooser -->
                <Button x:Name="ColumnFilterButton"
                        Style="{StaticResource ChipButton}"
                        Tag="Columns"
                        Content="All ▾"
                        DockPanel.Dock="Left"
                        Click="ColumnFilterButton_Click"/>

                <Popup x:Name="ColumnPopup"
                       PlacementTarget="{Binding ElementName=ColumnFilterButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       Closed="ColumnPopup_Closed">
                    <Border Background="White"
                            BorderBrush="{StaticResource Col.Border}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="8">
                        <StackPanel Width="260">
                            <TextBlock Text="Choose columns" FontWeight="Bold" Margin="4,0,4,6"/>
                            <ScrollViewer MaxHeight="260" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <CheckBox Content="ID" Tag="HouseholdID" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Owner Name" Tag="OwnerName" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Username" Tag="UserName" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Municipality" Tag="Municipality" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="District" Tag="District" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Contact" Tag="ContactNum" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Installed" Tag="InstallDateText" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Last Inspect" Tag="LastInspectText" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Status" Tag="Statuss" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Comment" Tag="UserComm" Margin="4" Click="ColumnCheckBox_Click"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Separator Margin="0,6,0,6"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Select all" Margin="4" Click="SelectAllColumns_Click"/>
                                <Button Content="Clear" Margin="4" Click="ClearAllColumns_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </DockPanel>

            <!-- Card with ListView -->
            <Border Grid.Row="1"
                    Background="{StaticResource Col.BgCard}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Col.Border}"
                    BorderThickness="1"
                    Padding="8">
                <Grid>
                    <ListView x:Name="HouseholdListView"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              SelectionMode="Single"
                              MouseDoubleClick="HouseholdListView_MouseDoubleClick">
                        <ListView.View>
                            <GridView AllowsColumnReorder="True">

                                <!-- Each header is a TextBlock with Tag = property name (locale-safe sorting) -->
                                <GridViewColumn Width="60">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_ID}" Tag="HouseholdID"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding HouseholdID}"
                                                       Foreground="{StaticResource Col.TextMut}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="150">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_OwnerName}" Tag="OwnerName"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding OwnerName}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="150">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_UserName}" Tag="UserName"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding UserName}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_Municipality}" Tag="Municipality"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding Municipality}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_District}" Tag="District"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding District}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="120">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_Contact}" Tag="ContactNum"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding ContactNum}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="110">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_Installed}" Tag="InstallDate"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding InstallDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="120">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_LastInspect}" Tag="LastInspect"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding LastInspect, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="150"
                                                CellTemplate="{StaticResource StatusChipTemplate}">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_Status}" Tag="Statuss"/>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="220">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="{x:Static res:Strings.OOSV_Column_Comment}" Tag="UserComm"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding UserComm}"
                                                       ToolTip="{Binding UserComm}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Empty state -->
                    <TextBlock Text="{x:Static res:Strings.OOSV_EmptyState}"
                               Foreground="{StaticResource Col.TextMut}"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=HouseholdListView, Path=HasItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
