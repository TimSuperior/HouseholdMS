<UserControl x:Class="HouseholdMS.View.Dashboard.AllHouseholdsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:model="clr-namespace:HouseholdMS.Model"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1200">

    <!-- ========== THEME & STYLES ========== -->
    <UserControl.Resources>

        <!-- Palette -->
        <SolidColorBrush x:Key="Col.BgCard" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.BgPage" Color="#FFF9F9F9"/>
        <SolidColorBrush x:Key="Col.Border"  Color="#FFE5E7EB"/>
        <SolidColorBrush x:Key="Col.HeaderBg" Color="#FFF3F4F6"/>
        <SolidColorBrush x:Key="Col.HeaderFg" Color="#FF374151"/>
        <SolidColorBrush x:Key="Col.RowHover" Color="#FFF5F8FF"/>
        <SolidColorBrush x:Key="Col.RowSel"   Color="#FFE8F0FE"/>
        <SolidColorBrush x:Key="Col.Text"     Color="#FF111827"/>
        <SolidColorBrush x:Key="Col.TextMut"  Color="#FF6B7280"/>
        <SolidColorBrush x:Key="Col.Primary"  Color="#FF3B82F6"/>
        <!-- blue-500 -->
        <SolidColorBrush x:Key="Col.PrimaryHover" Color="#FF2563EB"/>

        <!-- Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource Col.Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Col.PrimaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search box -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridView: Header style -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource Col.HeaderBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.HeaderFg}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- GridView: generic cell text -->
        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
        </Style>

        <!-- ListView row (modern, rounded, zebra, hover/selected) -->
        <Style TargetType="ListViewItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Row"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Col.Border}"
                                BorderThickness="0,0,0,1"
                                Margin="4,2"
                                SnapsToDevicePixels="True">
                            <GridViewRowPresenter
                                Content="{TemplateBinding Content}"
                                Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=View.Columns}"
                                Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Row" Property="Background" Value="{StaticResource Col.RowSel}"/>
                                <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
                                <Setter Property="BorderBrush" TargetName="Row" Value="{StaticResource Col.RowSel}"/>
                            </Trigger>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Row" Property="Background" Value="{StaticResource Col.RowHover}"/>
                            </Trigger>

                            <!-- Zebra stripe -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter TargetName="Row" Property="Background" Value="#FFFCFCFD"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status chip -->
        <DataTemplate x:Key="StatusChipTemplate">
            <Border x:Name="Chip"
                    Padding="10,4"
                    CornerRadius="999"
                    Background="#FFE5E7EB"
                    HorizontalAlignment="Left"
                    ToolTip="Click to change status (Admins only)">
                <TextBlock Text="{Binding Statuss}"
                           Margin="0,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="#FF374151"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           MouseLeftButtonDown="StatusText_MouseLeftButtonDown"/>
            </Border>
            <DataTemplate.Triggers>
                <!-- Operational -> green -->
                <DataTrigger Binding="{Binding Statuss}" Value="Operational">
                    <Setter TargetName="Chip" Property="Background" Value="#D1FAE5"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#A7F3D0"/>
                </DataTrigger>
                <!-- In Service / Not Operational -> amber -->
                <DataTrigger Binding="{Binding Statuss}" Value="In Service">
                    <Setter TargetName="Chip" Property="Background" Value="#FEF3C7"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FDE68A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Statuss}" Value="Not Operational">
                    <Setter TargetName="Chip" Property="Background" Value="#FEF3C7"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FDE68A"/>
                </DataTrigger>
                <!-- Out of Service -> red -->
                <DataTrigger Binding="{Binding Statuss}" Value="Out of Service">
                    <Setter TargetName="Chip" Property="Background" Value="#FEE2E2"/>
                    <Setter TargetName="Chip" Property="BorderBrush" Value="#FECACA"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Read-only details card (kept) -->
        <DataTemplate x:Key="HouseholdReadOnlyTemplate">
            <Border Padding="12" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Owner Name:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OwnerName}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="User Name:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding UserName}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Municipality:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Municipality}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="District:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding District}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Contact:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ContactNum}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Installed:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding InstallDate, StringFormat='{}{0:yyyy-MM-dd}'}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Last Inspect:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LastInspect, StringFormat='{}{0:yyyy-MM-dd}'}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Statuss}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Comment:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding UserComm}" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <!-- ========== LAYOUT ========== -->
    <Border Background="{StaticResource Col.BgPage}" Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Search + Table -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top bar -->
                <DockPanel LastChildFill="False" Margin="0,0,0,10">
                    <TextBox x:Name="SearchBox"
                             Style="{StaticResource SearchBoxStyle}"
                             Width="320"
                             VerticalContentAlignment="Center"
                             Foreground="{StaticResource Col.TextMut}"
                             FontStyle="Italic"
                             Text="Search by owner, user, area or contact"
                             Tag="Search by owner, user, area or contact"
                             GotFocus="ClearText"
                             LostFocus="ResetText"
                             TextChanged="SearchBox_TextChanged"
                             DockPanel.Dock="Left"/>
                    <Button x:Name="AddHouseholdButton"
                            Content="➕ Add Household"
                            Style="{StaticResource ActionButtonStyle}"
                            Width="170"
                            DockPanel.Dock="Right"
                            Click="AddHouseholdButton_Click"/>
                </DockPanel>

                <!-- Card containing table -->
                <Border Grid.Row="1"
                        Background="{StaticResource Col.BgCard}"
                        CornerRadius="12"
                        BorderBrush="{StaticResource Col.Border}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <!-- Modern ListView as a table -->
                        <ListView x:Name="HouseholdListView"
                                  AlternationCount="2"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  SelectionMode="Single"
                                  SelectionChanged="HouseholdListView_SelectionChanged">
                            <ListView.View>
                                <GridView AllowsColumnReorder="True">
                                    <GridViewColumn Header="ID" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Style="{StaticResource CellText}"
                                                           Text="{Binding HouseholdID}"
                                                           Foreground="{StaticResource Col.TextMut}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Owner Name" Width="150"
                                                    DisplayMemberBinding="{Binding OwnerName}"/>

                                    <GridViewColumn Header="User Name" Width="150"
                                                    DisplayMemberBinding="{Binding UserName}"/>

                                    <GridViewColumn Header="Municipality" Width="140"
                                                    DisplayMemberBinding="{Binding Municipality}"/>

                                    <GridViewColumn Header="District" Width="140"
                                                    DisplayMemberBinding="{Binding District}"/>

                                    <GridViewColumn Header="Contact" Width="120"
                                                    DisplayMemberBinding="{Binding ContactNum}"/>

                                    <GridViewColumn Header="Installed" Width="110">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Style="{StaticResource CellText}"
                                                           Text="{Binding InstallDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Last Inspect" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Style="{StaticResource CellText}"
                                                           Text="{Binding LastInspect, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <!-- Status with modern chip; still clickable for admins -->
                                    <GridViewColumn Header="Status" Width="150"
                                                    CellTemplate="{StaticResource StatusChipTemplate}"/>

                                    <GridViewColumn Header="Comment" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Style="{StaticResource CellText}"
                                                           Text="{Binding UserComm}"
                                                           ToolTip="{Binding UserComm}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Empty state -->
                        <TextBlock Text="No households found"
                                   Foreground="{StaticResource Col.TextMut}"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=HouseholdListView, Path=HasItems}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>

            <!-- RIGHT: Inline form host -->
            <Border x:Name="FormContainer"
                    Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Col.Border}"
                    BorderThickness="1"
                    Padding="10"
                    Margin="10,0,0,0">
                <ContentControl x:Name="FormContent"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
