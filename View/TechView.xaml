<UserControl x:Class="HouseholdMS.View.TechView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HouseholdMS.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI"
             FontSize="14"
             Background="#f4f4f4"
             Foreground="#333">

    <UserControl.Resources>
        <!-- Button style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search box style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FAFAFA" Padding="20" SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Technician List + Add -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Add -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="SearchBox"
                             Width="280"
                             Style="{StaticResource SearchBoxStyle}"
                             Text="Search..."
                             Tag="Search..."
                             GotFocus="SearchBox_GotFocus"
                             LostFocus="SearchBox_LostFocus"
                             KeyUp="SearchBox_KeyUp"/>
                    <Button x:Name="AddTechnicianButton" 
                        Content="➕ Add Technician"
                            Background="#4CAF50"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddTechnicianButton_Click"/>
                </StackPanel>

                <!-- DataGrid -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Padding="6"
                        SnapsToDevicePixels="True">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  CanContentScroll="True">
                        <DataGrid x:Name="TechnicianDataGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  RowHeight="40"
                                  FontSize="14"
                                  Background="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="None"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  SelectionChanged="TechnicianDataGrid_SelectionChanged"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Namee}" Width="150"/>
                                <DataGridTextColumn Header="Contact" Binding="{Binding ContactNumm}" Width="150"/>
                                <DataGridTextColumn Header="Address" Binding="{Binding Addresss}" Width="150"/>
                                <DataGridTextColumn Header="Assigned Area" Binding="{Binding AssignedAreaa}" Width="180"/>
                                <DataGridTextColumn Header="Note" Binding="{Binding Notee}" Width="250"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Inline Technician Form -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="10"
                    Margin="10,0,0,0">
                <ContentControl x:Name="FormContent"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
