<UserControl x:Class="HouseholdMS.View.UserControls.AddTechnicianControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="500" d:DesignWidth="420">

    <Border Padding="20"
            CornerRadius="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Form Fields -->
            <StackPanel Grid.Row="0">
                <TextBlock x:Name="FormHeader"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2E3B4E"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="NameBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Contact Number" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="ContactBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Address of Technician" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="AddressBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Assigned Area" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="AreaBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Note (optional)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="NoteBox"
                         Height="80"
                         Margin="0,0,0,12"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Spacer column 0 -->

                <Button x:Name="SaveButton"
                        Grid.Column="1"
                        Width="120"
                        Height="36"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,10,0"
                        Click="Save_Click"/>

                <Button Content="✖ Cancel"
                        Grid.Column="2"
                        Width="100"
                        Height="36"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Cancel_Click"/>

                <Button x:Name="DeleteButton"
                        Content="🗑 Delete"
                        Grid.Column="3"
                        Width="100"
                        Height="36"
                        Background="#D32F2F"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10,0,0,0"
                        Visibility="Collapsed"
                        Click="Delete_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
