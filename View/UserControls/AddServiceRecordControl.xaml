<UserControl x:Class="HouseholdMS.View.UserControls.AddServiceRecordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="500"
             d:DesignWidth="440">

    <Border Padding="25"
            CornerRadius="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock x:Name="FormHeader"
                       Grid.Row="0"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2E3B4E"
                       Margin="0,0,0,20"/>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <TextBlock Text="Household ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="HouseholdIDBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Technician ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TechnicianIDBox" Height="32" Margin="0,0,0,12"/>

                <TextBlock Text="Last Inspect Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="LastInspectPicker"
                            Height="32"
                            Margin="0,0,0,12"
                            DisplayDateEnd="{x:Static System:DateTime.Today}"
                            SelectedDate="{x:Static System:DateTime.Today}"/>

                <TextBlock Text="Problem" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="ProblemBox"
                         Height="80"
                         Margin="0,0,0,12"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Action Taken" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="ActionBox"
                         Height="80"
                         Margin="0,0,0,12"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Repair Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="RepairDatePicker"
                            Height="32"
                            Margin="0,0,0,12"
                            DisplayDateEnd="{x:Static System:DateTime.Today}"/>
            </StackPanel>

            <!-- Buttons Row -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="DeleteButton"
                        Content="🗑 Delete"
                        Width="100"
                        Height="38"
                        FontWeight="Bold"
                        Background="#9E1B1B"
                        Foreground="White"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Grid.Column="0"
                        Margin="0,0,20,0"
                        Click="Delete_Click"/>

                <!-- Spacer -->

                <Button x:Name="SaveButton"
                        Content="✔ Save"
                        Width="120"
                        Height="38"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,0,10,0"
                        Click="Save_Click"/>

                <Button Content="✖ Cancel"
                        Width="100"
                        Height="38"
                        FontWeight="Bold"
                        Background="#F44336"
                        Foreground="White"
                        Cursor="Hand"
                        Grid.Column="3"
                        Click="Cancel_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
