<UserControl x:Class="HouseholdMS.View.UserControls.AddServiceRecordControl"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             Background="#F6F7FB"
             FontFamily="Segoe UI"
             FontSize="15"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="ClearType"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             d:DesignHeight="600"
             d:DesignWidth="520">

    <!-- ========== PALETTE & STYLES (aligned to AddServiceControl) ========== -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentBrush"         Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessBrush"        Color="#16A34A"/>
        <SolidColorBrush x:Key="DangerBrush"         Color="#DC2626"/>
        <SolidColorBrush x:Key="MutedBrush"          Color="#64748B"/>
        <SolidColorBrush x:Key="InputBorderBrush"    Color="#CBD5E1"/>
        <SolidColorBrush x:Key="CardBgBrush"         Color="#FAFBFF"/>
        <SolidColorBrush x:Key="DividerBrush"        Color="#E5E7EB"/>
        <SolidColorBrush x:Key="LabelBrush"          Color="#334155"/>
        <SolidColorBrush x:Key="ValueBrush"          Color="#0F172A"/>

        <!-- Status pill colors (used by code-behind ApplyStatusPill) -->
        <SolidColorBrush x:Key="Pill.DefaultBg" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Pill.DefaultFg" Color="#111827"/>
        <SolidColorBrush x:Key="Pill.OpenBg"    Color="#DBEAFE"/>
        <SolidColorBrush x:Key="Pill.OpenFg"    Color="#1E3A8A"/>
        <SolidColorBrush x:Key="Pill.FinishBg"  Color="#DCFCE7"/>
        <SolidColorBrush x:Key="Pill.FinishFg"  Color="#065F46"/>
        <SolidColorBrush x:Key="Pill.CancelBg"  Color="#FEE2E2"/>
        <SolidColorBrush x:Key="Pill.CancelFg"  Color="#991B1B"/>

        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
        </Style>

        <!-- Multiline input with error-ready styling -->
        <Style x:Key="ErrorBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="160"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <!-- Optional: set Tag="error" in code-behind to highlight -->
                <Trigger Property="Tag" Value="error">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="InputTextBox" TargetType="TextBox" BasedOn="{StaticResource ErrorBoxStyle}"/>

        <!-- Summary grid label/value -->
        <Style x:Key="SummaryLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,12,8"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        <Style x:Key="SummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource ValueBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- Card wrapper -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.75"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        </Style>
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- ========== OUTER CARD (same shell as AddServiceControl) ========== -->
    <Border Padding="28"
            CornerRadius="16"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.16" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Header ===== -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,14">
                <DockPanel LastChildFill="False">
                    <TextBlock Text="🧾" FontSize="26" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical">
                        <!-- Name kept for code-behind -->
                        <TextBlock x:Name="FormHeader"
                                   Text="{x:Static res:Strings.ASRC_Header_Title}"
                                   Style="{StaticResource HeaderTitle}"/>
                        <TextBlock Text="{x:Static res:Strings.ASRC_Header_Subtitle}"
                                   Style="{StaticResource HeaderInfo}"/>
                    </StackPanel>

                    <!-- Status pill shows in details mode -->
                    <Border x:Name="StatusPill"
                            DockPanel.Dock="Right"
                            Padding="10,4"
                            CornerRadius="999"
                            Background="{StaticResource Pill.DefaultBg}"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=DetailsPanel, Path=Visibility}" Value="Visible">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock x:Name="StatusPillText"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Pill.DefaultFg}"/>
                    </Border>
                </DockPanel>
            </StackPanel>

            <!-- ===== Body ===== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                <StackPanel>

                    <!-- Details (view mode) -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                        <!-- Name kept for code-behind toggling -->
                        <Grid x:Name="DetailsPanel" Visibility="Collapsed" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- rows 0..14 + separators -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0 -->
                                <RowDefinition Height="1"/>
                                <!-- 1 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 2 -->
                                <RowDefinition Height="1"/>
                                <!-- 3 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4 -->
                                <RowDefinition Height="1"/>
                                <!-- 5 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6 -->
                                <RowDefinition Height="1"/>
                                <!-- 7 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 8 -->
                                <RowDefinition Height="1"/>
                                <!-- 9 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 10 -->
                                <RowDefinition Height="1"/>
                                <!-- 11 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 12 -->
                                <RowDefinition Height="1"/>
                                <!-- 13 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 14 -->
                            </Grid.RowDefinitions>

                            <!-- Section header -->
                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                                       Text="{x:Static res:Strings.ASRC_Header_Subtitle}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource LabelBrush}" Margin="0,0,0,6"/>

                            <!-- Service ID -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_ServiceId}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="ServiceIdValue" Grid.Row="2" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="3" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Household -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_Household}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="HouseholdValue" Grid.Row="4" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="5" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Technicians -->
                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_Technicians}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="TechniciansValue" Grid.Row="6" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="7" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Problem -->
                            <TextBlock Grid.Row="8" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_Problem}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="ProblemValue" Grid.Row="8" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="9" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Action -->
                            <TextBlock Grid.Row="10" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_Action}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="ActionValue" Grid.Row="10" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="11" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Inventory -->
                            <TextBlock Grid.Row="12" Grid.Column="0" 
                                       Text="{x:Static res:Strings.ASRC_Det_Inventory}" 
                                       Style="{StaticResource SummaryLabelStyle}"/>
                            <TextBlock x:Name="InventoryValue" Grid.Row="12" Grid.Column="1" Style="{StaticResource SummaryValueStyle}"/>
                            <Border Grid.Row="13" Grid.ColumnSpan="2" Background="{StaticResource DividerBrush}"/>

                            <!-- Dates -->
                            <StackPanel Grid.Row="14" Grid.Column="0" Orientation="Vertical" Margin="0,0,12,0">
                                <TextBlock Text="{x:Static res:Strings.ASRC_Det_Started}" Style="{StaticResource SummaryLabelStyle}" Margin="0,0,0,0"/>
                                <TextBlock x:Name="StartedValue" Style="{StaticResource SummaryValueStyle}" Margin="0,-2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Row="14" Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{x:Static res:Strings.ASRC_Det_Finished}" Style="{StaticResource SummaryLabelStyle}" Margin="0,0,0,0"/>
                                <TextBlock x:Name="FinishedValue" Style="{StaticResource SummaryValueStyle}" Margin="0,-2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Form (edit/add) -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel x:Name="FormPanel">
                            <!-- Section header -->
                            <TextBlock Text="{x:Static res:Strings.ASRC_Header_Subtitle}"
                                       Style="{StaticResource FormLabel}"
                                       Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_HouseholdID}"/>
                                <TextBox x:Name="HouseholdIDBox" Grid.Row="0" Grid.Column="1" Height="36" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_TechnicianID}"/>
                                <TextBox x:Name="TechnicianIDBox" Grid.Row="1" Grid.Column="1" Height="36" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_LastInspectDate}"/>
                                <DatePicker x:Name="LastInspectPicker"
                                            Grid.Row="2" Grid.Column="1"
                                            Height="36" Margin="0,0,0,10"
                                            DisplayDateEnd="{x:Static System:DateTime.Today}"
                                            SelectedDate="{x:Static System:DateTime.Today}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_Problem}"/>
                                <TextBox x:Name="ProblemBox"
                                         Grid.Row="3" Grid.Column="1"
                                         Style="{StaticResource InputTextBox}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_ActionTaken}"/>
                                <TextBox x:Name="ActionBox"
                                         Grid.Row="4" Grid.Column="1"
                                         Style="{StaticResource InputTextBox}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource SummaryLabelStyle}" 
                                           Text="{x:Static res:Strings.ASRC_Form_RepairDate}"/>
                                <DatePicker x:Name="RepairDatePicker"
                                            Grid.Row="5" Grid.Column="1"
                                            Height="36"
                                            DisplayDateEnd="{x:Static System:DateTime.Today}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- ===== Footer ===== -->
            <Grid Grid.Row="2" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="DeleteButton"
                            Content="{x:Static res:Strings.ASRC_Btn_Delete}"
                            Style="{StaticResource CancelButton}"
                            Visibility="Collapsed"
                            Click="Delete_Click"/>
                    <Button x:Name="SaveButton"
                            Content="{x:Static res:Strings.ASRC_Btn_Save}"
                            Style="{StaticResource PrimaryButton}"
                            Click="Save_Click"/>
                    <Button x:Name="CancelButton"
                            Content="{x:Static res:Strings.ASRC_Btn_Close}"
                            Style="{StaticResource CancelButton}"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
