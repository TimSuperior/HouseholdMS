<UserControl x:Class="HouseholdMS.View.UserControls.TestReportDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F7F9FC"
             FontFamily="Segoe UI"
             FontSize="14"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="ClearType"
             d:DesignHeight="780"
             d:DesignWidth="1100"
             MinHeight="720"
             MinWidth="960">

    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="Col.Page"   Color="#F7F9FC"/>
        <SolidColorBrush x:Key="Col.Card"   Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.Border" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Col.Text"   Color="#1F2937"/>
        <SolidColorBrush x:Key="Col.Muted"  Color="#6B7280"/>
        <SolidColorBrush x:Key="Col.Accent" Color="#2563EB"/>

        <!-- Section header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Field label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Muted}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- Readonly TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- DataGrid modern look -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="ColumnHeaderHeight" Value="36"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Wrap text inside DataGrid cells -->
        <Style x:Key="CellWrap" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="6,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Card container -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </UserControl.Resources>

    <Border Padding="24"
            CornerRadius="12"
            BorderBrush="{StaticResource Col.Border}"
            BorderThickness="1"
            Background="{StaticResource Col.Card}"
            Margin="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
                <TextBlock x:Name="FormHeader"
                           DockPanel.Dock="Left"
                           Text="📄 Test Report Details"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource Col.Text}"/>
            </DockPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Primary Info -->
                    <Border Style="{StaticResource Card}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Primary Info" Style="{StaticResource SectionHeader}" Grid.ColumnSpan="4"/>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Household ID" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="HouseholdIDBox"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Technician ID" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TechnicianIDBox"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Test Date" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TestDateBox"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="3">
                                <TextBlock Text="Device Status" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="DeviceStatusBox"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Inspection Items -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Inspection Items" Style="{StaticResource SectionHeader}"/>

                            <DataGrid x:Name="InspectionGrid"
                                      MinHeight="160"
                                      ColumnWidth="*"
                                      AlternatingRowBackground="#FCFCFC">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item" Binding="{Binding Name}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Result" Binding="{Binding Result}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Annotation" Binding="{Binding Annotation}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Original TextBox kept (hidden) -->
                            <TextBox x:Name="InspectionItemsBox" Visibility="Collapsed"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                    <!-- Annotations -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Annotations" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="AnnotationsBox" Height="120" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                    <!-- Settings Verification -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Settings Verification" Style="{StaticResource SectionHeader}"/>

                            <DataGrid x:Name="SettingsGrid"
                                      MinHeight="160"
                                      ColumnWidth="*"
                                      AlternatingRowBackground="#FCFCFC">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CellWrap}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Original TextBox kept (hidden) -->
                            <TextBox x:Name="SettingsVerificationBox" Visibility="Collapsed"
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                    <!-- Image Paths -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Image Paths" Style="{StaticResource SectionHeader}"/>
                            <ListBox x:Name="ImagePathsList" MinHeight="100"
                                     BorderBrush="{StaticResource Col.Border}" BorderThickness="1">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Padding="6,3"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Original TextBox kept (hidden) -->
                            <TextBox x:Name="ImagePathsBox" Visibility="Collapsed"
                                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <DockPanel Grid.Row="2" Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button x:Name="ExportButton"
                            Content="📤 Export PDF"
                            Width="160"
                            Height="40"
                            FontWeight="Bold"
                            Background="#2563EB"
                            Foreground="White"
                            BorderBrush="#1E40AF"
                            BorderThickness="1"
                            Click="ExportButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
