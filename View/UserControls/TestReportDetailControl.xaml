<UserControl x:Class="HouseholdMS.View.UserControls.TestReportDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="500"
             d:DesignWidth="440">

    <Border Padding="25"
            CornerRadius="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock x:Name="FormHeader"
                       Grid.Row="0"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2E3B4E"
                       Margin="0,0,0,20"
                       Text="📄 Test Report Details"/>

            <!-- Report Details -->
            <ScrollViewer Grid.Row="1">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="Household ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="HouseholdIDBox" Height="32" Margin="0,0,0,12" IsReadOnly="True"/>

                    <TextBlock Text="Technician ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TechnicianIDBox" Height="32" Margin="0,0,0,12" IsReadOnly="True"/>

                    <TextBlock Text="Test Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TestDateBox" Height="32" Margin="0,0,0,12" IsReadOnly="True"/>

                    <TextBlock Text="Device Status" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="DeviceStatusBox" Height="32" Margin="0,0,0,12" IsReadOnly="True"/>

                    <TextBlock Text="Inspection Items" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="InspectionItemsBox" Height="80" Margin="0,0,0,12" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

                    <TextBlock Text="Annotations" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="AnnotationsBox" Height="80" Margin="0,0,0,12" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

                    <TextBlock Text="Settings Verification" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="SettingsVerificationBox" Height="80" Margin="0,0,0,12" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

                    <TextBlock Text="Image Paths" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ImagePathsBox" Height="60" Margin="0,0,0,12" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Export Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="ExportButton"
                        Content="📤 Export PDF"
                        Width="140"
                        Height="36"
                        FontWeight="Bold"
                        Background="#2196F3"
                        Foreground="White"
                        Click="ExportButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
