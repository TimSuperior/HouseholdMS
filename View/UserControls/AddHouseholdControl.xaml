<UserControl x:Class="HouseholdMS.View.UserControls.AddHouseholdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600"
             d:DesignWidth="440">

    <Border Padding="25"
            CornerRadius="12"
            BorderBrush="#e0e0e0"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.Resources>
                <Style x:Key="ErrorBoxStyle" TargetType="TextBox">
                    <Setter Property="BorderBrush" Value="#C0C0C0"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="ToolTip" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="Tag" Value="error">
                            <Setter Property="BorderBrush" Value="Red"/>
                            <Setter Property="BorderThickness" Value="1.5"/>
                            <Setter Property="ToolTip" Value="This field is required."/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="📝" FontSize="22" Margin="0,0,8,0"/>
                <TextBlock x:Name="FormHeader"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2E3B4E"/>
            </StackPanel>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">

                    <!-- Owner Name -->
                    <TextBlock Text="Owner Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="OwnerBox" Style="{StaticResource ErrorBoxStyle}" Height="32" Margin="0,0,0,10" TabIndex="1"/>

                    <!-- User Name -->
                    <TextBlock Text="User Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="UserNameBox" Height="32" Margin="0,0,0,10" TabIndex="2"/>

                    <!-- Municipality -->
                    <TextBlock Text="Municipality" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="MunicipalityBox" Height="32" Margin="0,0,0,10" TabIndex="3"/>

                    <!-- District -->
                    <TextBlock Text="District" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="DistrictBox" Height="32" Margin="0,0,0,10" TabIndex="4"/>

                    <!-- Contact Number -->
                    <TextBlock Text="Contact Number" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="ContactBox" Style="{StaticResource ErrorBoxStyle}" Height="32" Margin="0,0,0,10" TabIndex="5"/>

                    <!-- Installation Date -->
                    <TextBlock Text="Installation Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <DatePicker x:Name="InstDatePicker"
                                Height="32"
                                Padding="6,0"
                                BorderBrush="#C0C0C0"
                                BorderThickness="1"
                                Background="White"
                                SelectedDateFormat="Short"
                                VerticalContentAlignment="Center"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,10"
                                TabIndex="6"/>

                    <!-- Last Inspection Date -->
                    <TextBlock Text="Last Inspection Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <DatePicker x:Name="LastInspPicker"
                                Height="32"
                                Padding="6,0"
                                BorderBrush="#C0C0C0"
                                BorderThickness="1"
                                Background="White"
                                SelectedDateFormat="Short"
                                VerticalContentAlignment="Center"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,10"
                                TabIndex="7"/>

                    <!-- Status -->
                    <TextBlock Text="Status" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="StatusBox" Height="32" Margin="0,0,0,10" TabIndex="8"/>

                    <!-- Note -->
                    <TextBlock Text="Note (optional)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="NoteBox"
                             Height="60"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             BorderBrush="#C0C0C0"
                             BorderThickness="1"
                             Margin="0,0,0,10"
                             TabIndex="9"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0" >
                <Button x:Name="SaveButton"
                        Content="💾 Save"
                        Width="110"
                        Height="36"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Margin="0,0,8,0"
                        Click="Save_Click"
                        TabIndex="10"/>
                <Button Content="✖ Cancel"
                        Width="100"
                        Height="36"
                        FontWeight="Bold"
                        Background="#F44336"
                        Foreground="White"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"
                        TabIndex="11"/>
                <Button x:Name="DeleteButton"
                        Content="🗑 Delete"
                        Width="100"
                        Height="36"
                        FontWeight="Bold"
                        Background="#9E1B1B"
                        Foreground="White"
                        Visibility="Collapsed"
                        Click="Delete_Click"
                        TabIndex="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
