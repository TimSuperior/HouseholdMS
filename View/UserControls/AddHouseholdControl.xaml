<UserControl x:Class="HouseholdMS.View.UserControls.AddHouseholdControl"   
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600"
             d:DesignWidth="440"
             FontFamily="{DynamicResource AppFontFamily}"
             FontSize="{DynamicResource AppFontSize}"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Border Padding="25"
            CornerRadius="14"
            BorderBrush="#E6E8ED"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect Color="#33000000" BlurRadius="16" ShadowDepth="2" Opacity="0.35"/>
        </Border.Effect>

        <!-- ROOT GRID -->
        <Grid Loaded="UserControl_Loaded" PreviewKeyDown="Root_PreviewKeyDown">
            <!-- Scale entire control with global UI zoom -->
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="{DynamicResource AppUiScale}"
                                ScaleY="{DynamicResource AppUiScale}"/>
            </Grid.LayoutTransform>

            <Grid.Resources>
                <!-- Palette -->
                <SolidColorBrush x:Key="AccentBrush"   Color="#1976D2"/>
                <SolidColorBrush x:Key="SuccessBrush"  Color="#2E7D32"/>
                <SolidColorBrush x:Key="DangerBrush"   Color="#D32F2F"/>
                <SolidColorBrush x:Key="DeleteBrush"   Color="#9E1B1B"/>
                <SolidColorBrush x:Key="MutedBrush"    Color="#6B7280"/>
                <SolidColorBrush x:Key="InfoBgBrush"   Color="#FFF7E6"/>
                <SolidColorBrush x:Key="InfoBrBrush"   Color="#FFE0B2"/>
                <SolidColorBrush x:Key="InfoFgBrush"   Color="#8A5600"/>
                <SolidColorBrush x:Key="InputBorderBrush" Color="#CDD5DF"/>
                <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>

                <!-- Tiny helper style for error text -->
                <Style x:Key="ErrorText" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                    <Setter Property="Margin" Value="0,6,0,0"/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>

                <!-- Chips -->
                <Style x:Key="ChipBorder" TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Margin" Value="6,0,0,0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                </Style>
                <Style x:Key="ChipText" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
                <Style x:Key="IdChipText" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#37474F"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>

                <!-- Labels -->
                <Style x:Key="FormLabel" TargetType="TextBlock">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="0,14,0,8"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                </Style>

                <!-- Inputs -->
                <Style x:Key="ErrorBoxStyle" TargetType="TextBox">
                    <Setter Property="MinHeight" Value="42"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="error">
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="BorderThickness" Value="1.5"/>
                            <Setter Property="ToolTip" Value="{x:Static res:Strings.AHC_FieldRequired}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style x:Key="InputTextBox" TargetType="TextBox" BasedOn="{StaticResource ErrorBoxStyle}" />

                <Style x:Key="InputComboBox" TargetType="ComboBox">
                    <Setter Property="MinHeight" Value="42"/>
                    <Setter Property="Padding" Value="10,6"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                    <Setter Property="IsEditable" Value="False"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="error">
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="BorderThickness" Value="1.5"/>
                            <Setter Property="ToolTip" Value="{x:Static res:Strings.AHC_FieldRequired}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style x:Key="InputDatePicker" TargetType="DatePicker">
                    <Setter Property="MinHeight" Value="42"/>
                    <Setter Property="Padding" Value="10,6"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="SelectedDateFormat" Value="Short"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="error">
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="BorderThickness" Value="1.5"/>
                            <Setter Property="ToolTip" Value="{x:Static res:Strings.AHC_FieldRequired}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Buttons -->
                <Style x:Key="ActionButtonStyle" TargetType="Button">
                    <Setter Property="MinHeight" Value="44"/>
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="Margin" Value="0,0,8,0"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="9">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.92"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.78"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.55"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                </Style>
                <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                </Style>
                <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource DeleteBrush}"/>
                </Style>
            </Grid.Resources>

            <!-- Rows: Header, Info, Content, Footer -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏠" FontSize="{DynamicResource AppFontSizeTitle}" Margin="0,0,10,0"/>
                    <TextBlock x:Name="FormHeader"
                               FontSize="{DynamicResource AppFontSizeTitle}"
                               FontWeight="Bold"
                               Foreground="#0F172A" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border x:Name="IdChip"
                            Visibility="Collapsed"
                            Background="#ECEFF1"
                            BorderBrush="#CFD8DC"
                            BorderThickness="1"
                            Style="{StaticResource ChipBorder}">
                        <TextBlock x:Name="IdChipText" Style="{StaticResource IdChipText}" />
                    </Border>

                    <Border x:Name="StatusChip" Style="{StaticResource ChipBorder}" Background="{StaticResource SuccessBrush}">
                        <TextBlock x:Name="StatusChipText" Style="{StaticResource ChipText}" Text="{x:Static res:Strings.Common_Status_Operational}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Tiny note: required fields -->
            <Border Grid.Row="1"
                    Background="#F3F4F6"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,0,0,12">
                <TextBlock Foreground="#374151" FontSize="{DynamicResource AppFontSize}">
                    <Run Text="Fields marked with "/>
                    <Run Text="*" Foreground="#D32F2F"/><Run Text=" are required."/>
                </TextBlock>
            </Border>

            <!-- Info bar (Out of service) -->
            <Border x:Name="StatusInfoBar"
                    Grid.Row="1"
                    Background="{StaticResource InfoBgBrush}"
                    BorderBrush="{StaticResource InfoBrBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,52,0,12"
                    Visibility="Collapsed">
                <TextBlock Foreground="{StaticResource InfoFgBrush}"
                           FontSize="{DynamicResource AppFontSize}"
                           Text="{x:Static res:Strings.AHC_Info_OutOfService}"/>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">

                    <!-- Owner -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="{x:Static res:Strings.AHC_Label_OwnerName}"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <TextBox x:Name="OwnerBox"
                             Style="{StaticResource ErrorBoxStyle}"
                             Margin="0,0,0,0"
                             TabIndex="1"
                             TextChanged="OnAnyTextChanged"/>
                    <TextBlock x:Name="OwnerErr" Style="{StaticResource ErrorText}"/>

                    <!-- DNI -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="DNI"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <TextBox x:Name="DNIBox"
                             Style="{StaticResource InputTextBox}"
                             Margin="0,0,0,0"
                             TabIndex="2"
                             TextChanged="OnAnyTextChanged"/>
                    <TextBlock x:Name="DNIErr" Style="{StaticResource ErrorText}"/>

                    <!-- Address mode switch -->
                    <CheckBox x:Name="UseCoordinatesCheck"
                              Margin="0,12,0,0"
                              Content="Use coordinates (X / Y) instead of municipality and district"
                              IsChecked="False"
                              Checked="UseCoordinatesCheck_Changed"
                              Unchecked="UseCoordinatesCheck_Changed"
                              TabIndex="3"/>

                    <!-- Address Panel (textual address) -->
                    <StackPanel x:Name="AddressPanel">
                        <!-- Municipality -->
                        <TextBlock Style="{StaticResource FormLabel}">
                            <Run Text="{x:Static res:Strings.AHC_Label_Municipality}"/>
                            <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                        </TextBlock>
                        <TextBox x:Name="MunicipalityBox"
                                 Style="{StaticResource InputTextBox}"
                                 Margin="0,0,0,0"
                                 TabIndex="4"
                                 TextChanged="OnAnyTextChanged"/>
                        <TextBlock x:Name="MunicipalityErr" Style="{StaticResource ErrorText}"/>

                        <!-- District -->
                        <TextBlock Style="{StaticResource FormLabel}">
                            <Run Text="{x:Static res:Strings.AHC_Label_District}"/>
                            <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                        </TextBlock>
                        <TextBox x:Name="DistrictBox"
                                 Style="{StaticResource InputTextBox}"
                                 Margin="0,0,0,0"
                                 TabIndex="5"
                                 TextChanged="OnAnyTextChanged"/>
                        <TextBlock x:Name="DistrictErr" Style="{StaticResource ErrorText}"/>
                    </StackPanel>

                    <!-- Coordinates Panel -->
                    <StackPanel x:Name="CoordinatesPanel" Visibility="Collapsed" Margin="0,6,0,0">
                        <TextBlock Style="{StaticResource FormLabel}">
                            <Run Text="Coordinates (X, Y)"/>
                            <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="XBox"
                                     Grid.Column="0"
                                     Style="{StaticResource InputTextBox}"
                                     Margin="0,0,0,0"
                                     TabIndex="4"
                                     TextChanged="OnAnyTextChanged"
                                     PreviewTextInput="Coordinate_PreviewTextInput"/>
                            <TextBlock Grid.ColumnSpan="3" x:Name="XErr" Style="{StaticResource ErrorText}"/>

                            <TextBox x:Name="YBox"
                                     Grid.Column="2"
                                     Style="{StaticResource InputTextBox}"
                                     Margin="0,0,0,0"
                                     TabIndex="5"
                                     TextChanged="OnAnyTextChanged"
                                     PreviewTextInput="Coordinate_PreviewTextInput"/>
                            <TextBlock Grid.ColumnSpan="3" x:Name="YErr" Style="{StaticResource ErrorText}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Contact -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="{x:Static res:Strings.AHC_Label_ContactNumber}"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <TextBox x:Name="ContactBox"
                             Style="{StaticResource ErrorBoxStyle}"
                             Margin="0,0,0,0"
                             PreviewTextInput="ContactBox_PreviewTextInput"
                             TabIndex="6"
                             MaxLength="20"
                             TextChanged="OnAnyTextChanged"/>
                    <TextBlock x:Name="ContactErr" Style="{StaticResource ErrorText}"/>

                    <!-- Install Date -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="{x:Static res:Strings.AHC_Label_InstallDate}"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <DatePicker x:Name="InstDatePicker"
                                Style="{StaticResource InputDatePicker}"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,0"
                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                TabIndex="7"/>
                    <TextBlock x:Name="InstDateErr" Style="{StaticResource ErrorText}"/>

                    <!-- Last Inspect Date -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="{x:Static res:Strings.AHC_Label_LastInspectDate}"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <DatePicker x:Name="LastInspPicker"
                                Style="{StaticResource InputDatePicker}"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,0"
                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                TabIndex="8"/>
                    <TextBlock x:Name="LastInspErr" Style="{StaticResource ErrorText}"/>

                    <!-- Status -->
                    <TextBlock Style="{StaticResource FormLabel}">
                        <Run Text="{x:Static res:Strings.AHC_Label_Status}"/>
                        <Run Text=" *" Foreground="{StaticResource ErrorBrush}"/>
                    </TextBlock>
                    <ComboBox x:Name="StatusCombo"
                              Style="{StaticResource InputComboBox}"
                              Margin="0,0,0,0"
                              TabIndex="9"
                              SelectionChanged="StatusCombo_SelectionChanged"
                              SelectedIndex="0"
                              IsEditable="False">
                        <ComboBoxItem Content="{x:Static res:Strings.Common_Status_Operational}" Tag="Operational"/>
                        <ComboBoxItem Content="{x:Static res:Strings.Common_Status_OutOfService}" Tag="Out of Service"/>
                    </ComboBox>
                    <TextBlock x:Name="StatusErr" Style="{StaticResource ErrorText}"/>

                    <!-- SP, SMI, SB (optional) -->
                    <TextBlock Text="Serie Panel (SP)" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="SPBox" Style="{StaticResource InputTextBox}" TabIndex="10"/>

                    <TextBlock Text="Serie Mòdulo Integrado (SMI)" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="SMIBox" Style="{StaticResource InputTextBox}" TabIndex="11"/>

                    <TextBlock Text="Serie Bateria (SB)" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="SBBox" Style="{StaticResource InputTextBox}" TabIndex="12"/>

                    <!-- Note (optional) -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_NoteOptional}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="NoteBox"
                             MinHeight="92"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="White"
                             BorderBrush="{StaticResource InputBorderBrush}"
                             BorderThickness="1"
                             Padding="12,8"
                             Margin="0,0,0,0"
                             TabIndex="13"/>

                    <!-- Service History -->
                    <Border x:Name="ServiceHistoryPanel"
                            Visibility="Collapsed"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Background="#FAFAFA"
                            Padding="12"
                            Margin="0,16,0,0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" LastChildFill="False">
                                <TextBlock Text="{x:Static res:Strings.AHC_ServiceHistory_Title}"
                                           FontSize="{DynamicResource AppFontSizeTitle}"
                                           FontWeight="Bold"
                                           Foreground="#2E3B4E"
                                           Margin="0,0,10,8"/>
                                <Border Background="#ECEFF1"
                                        BorderBrush="#CFD8DC"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="10,5"
                                        Margin="6,0,0,0">
                                    <TextBlock x:Name="ServiceHistoryCountText"
                                               Foreground="#37474F"
                                               FontWeight="SemiBold"
                                               FontSize="{DynamicResource AppFontSize}"
                                               Text="{x:Static res:Strings.AHC_ServiceHistory_Zero}"/>
                                </Border>
                            </DockPanel>

                            <TextBlock x:Name="ServiceHistoryEmptyText"
                                       Grid.Row="1"
                                       Margin="0,8,0,10"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="{DynamicResource AppFontSize}"
                                       Text="{x:Static res:Strings.AHC_ServiceHistory_Empty}"
                                       Visibility="Collapsed"/>

                            <DataGrid x:Name="ServiceHistoryGrid"
                                      Grid.Row="2"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      Margin="0,6,0,0"
                                      MouseLeftButtonUp="ServiceHistoryGrid_MouseLeftButtonUp"
                                      MaxHeight="360"
                                      ScrollViewer.CanContentScroll="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="MinHeight" Value="38"/>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10,6"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding ServiceID}" Header="{x:Static res:Strings.AHC_SH_Col_Id}" Width="60"/>
                                    <DataGridTextColumn Binding="{Binding Date}" Header="{x:Static res:Strings.AHC_SH_Col_Date}" Width="120"/>
                                    <DataGridTextColumn Binding="{Binding Technician}" Header="{x:Static res:Strings.AHC_SH_Col_Technician}" Width="170"/>
                                    <DataGridTextColumn Binding="{Binding Summary}" Header="{x:Static res:Strings.AHC_SH_Col_Summary}" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding Status}" Header="{x:Static res:Strings.AHC_SH_Col_Status}" Width="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton"
                        Content="{x:Static res:Strings.AHC_Btn_Save}"
                        Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"
                        TabIndex="14"/>
                <Button x:Name="CancelButton"
                        Content="{x:Static res:Strings.AHC_Btn_Cancel}"
                        Style="{StaticResource CancelButton}"
                        Click="Cancel_Click"
                        TabIndex="15"/>
                <Button x:Name="DeleteButton"
                        Content="{x:Static res:Strings.AHC_Btn_Delete}"
                        Style="{StaticResource DeleteButtonStyle}"
                        Visibility="Collapsed"
                        Click="Delete_Click"
                        TabIndex="16"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
