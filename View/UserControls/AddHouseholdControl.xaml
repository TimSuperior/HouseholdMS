<UserControl x:Class="HouseholdMS.View.UserControls.AddHouseholdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600"
             d:DesignWidth="440">

    <Border Padding="25"
            CornerRadius="12"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Background="White"
            SnapsToDevicePixels="True">

        <!-- ===== ROOT GRID (Header, InfoBar, Scrollable Content, Footer) ===== -->
        <Grid Loaded="UserControl_Loaded" PreviewKeyDown="Root_PreviewKeyDown">
            <!-- ===== Local styles/palette aligned with AddServiceControl ===== -->
            <Grid.Resources>
                <!-- Palette -->
                <SolidColorBrush x:Key="AccentBrush"   Color="#1976D2"/>
                <SolidColorBrush x:Key="SuccessBrush"  Color="#4CAF50"/>
                <SolidColorBrush x:Key="DangerBrush"   Color="#F44336"/>
                <SolidColorBrush x:Key="DeleteBrush"   Color="#9E1B1B"/>
                <SolidColorBrush x:Key="MutedBrush"    Color="#9E9E9E"/>
                <SolidColorBrush x:Key="InfoBgBrush"   Color="#FFF3CD"/>
                <SolidColorBrush x:Key="InfoBrBrush"   Color="#FAD38B"/>
                <SolidColorBrush x:Key="InfoFgBrush"   Color="#663C00"/>
                <SolidColorBrush x:Key="InputBorderBrush" Color="#C0C0C0"/>

                <!-- Chips -->
                <Style x:Key="ChipBorder" TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="Padding" Value="8,3"/>
                    <Setter Property="Margin" Value="6,0,0,0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                </Style>
                <Style x:Key="ChipText" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
                <Style x:Key="IdChipText" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#37474F"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>

                <!-- Labels -->
                <Style x:Key="FormLabel" TargetType="TextBlock">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="0,10,0,4"/>
                    <Setter Property="Foreground" Value="#2E3B4E"/>
                </Style>

                <!-- Inputs: TextBox w/ required-error trigger (Tag='error') -->
                <Style x:Key="ErrorBoxStyle" TargetType="TextBox">
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="Padding" Value="8,0"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="ToolTip" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="error">
                            <Setter Property="BorderBrush" Value="Red"/>
                            <Setter Property="BorderThickness" Value="1.5"/>
                            <Setter Property="ToolTip" Value="{x:Static res:Strings.AHC_FieldRequired}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Generic TextBox -->
                <Style x:Key="InputTextBox" TargetType="TextBox" BasedOn="{StaticResource ErrorBoxStyle}" />

                <!-- ComboBox -->
                <Style x:Key="InputComboBox" TargetType="ComboBox">
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="Padding" Value="6,0"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- DatePicker -->
                <Style x:Key="InputDatePicker" TargetType="DatePicker">
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="Padding" Value="6,0"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="SelectedDateFormat" Value="Short"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Rounded action buttons -->
                <Style x:Key="ActionButtonStyle" TargetType="Button">
                    <Setter Property="Height" Value="36"/>
                    <Setter Property="MinWidth" Value="100"/>
                    <Setter Property="Margin" Value="0,0,8,0"/>
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.55"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                </Style>
                <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                </Style>
                <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource DeleteBrush}"/>
                </Style>
            </Grid.Resources>

            <!-- ===== Layout ===== -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Info bar -->
                <RowDefinition Height="*"/>
                <!-- Scrollable content: Form + Service history -->
                <RowDefinition Height="Auto"/>
                <!-- Footer buttons -->
            </Grid.RowDefinitions>

            <!-- Header: icon + title on left; ID + status chip on right -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏠" FontSize="22" Margin="0,0,8,0"/>
                    <TextBlock x:Name="FormHeader"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2E3B4E" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Household ID chip (hidden for Add mode) -->
                    <Border x:Name="IdChip"
                            Visibility="Collapsed"
                            Background="#ECEFF1"
                            BorderBrush="#CFD8DC"
                            BorderThickness="1"
                            Style="{StaticResource ChipBorder}">
                        <TextBlock x:Name="IdChipText" Style="{StaticResource IdChipText}" />
                    </Border>

                    <!-- Status chip -->
                    <Border x:Name="StatusChip" Style="{StaticResource ChipBorder}" Background="{StaticResource SuccessBrush}">
                        <TextBlock x:Name="StatusChipText" Style="{StaticResource ChipText}" Text="{x:Static res:Strings.Common_Status_Operational}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Info bar (shown when Out of Service) -->
            <Border x:Name="StatusInfoBar"
                    Grid.Row="1"
                    Background="{StaticResource InfoBgBrush}"
                    BorderBrush="{StaticResource InfoBrBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,0,0,10"
                    Visibility="Collapsed">
                <TextBlock Foreground="{StaticResource InfoFgBrush}"
                           Text="{x:Static res:Strings.AHC_Info_OutOfService}"/>
            </Border>

            <!-- ===== SCROLLABLE CONTENT: Form Fields + Service History (together) ===== -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">

                    <!-- ===== Form Fields ===== -->
                    <!-- Owner Name (required) -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_OwnerName}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="OwnerBox"
                             Style="{StaticResource ErrorBoxStyle}"
                             Margin="0,0,0,10"
                             TabIndex="1"/>

                    <!-- User Name -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_UserName}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="UserNameBox"
                             Style="{StaticResource InputTextBox}"
                             Margin="0,0,0,10"
                             TabIndex="2"/>

                    <!-- Municipality -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_Municipality}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="MunicipalityBox"
                             Style="{StaticResource InputTextBox}"
                             Margin="0,0,0,10"
                             TabIndex="3"/>

                    <!-- District -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_District}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="DistrictBox"
                             Style="{StaticResource InputTextBox}"
                             Margin="0,0,0,10"
                             TabIndex="4"/>

                    <!-- Contact Number (required) -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_ContactNumber}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="ContactBox"
                             Style="{StaticResource ErrorBoxStyle}"
                             Margin="0,0,0,10"
                             TabIndex="5"/>

                    <!-- Installation Date -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_InstallDate}" Style="{StaticResource FormLabel}"/>
                    <DatePicker x:Name="InstDatePicker"
                                Style="{StaticResource InputDatePicker}"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,10"
                                TabIndex="6"/>

                    <!-- Last Inspection Date -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_LastInspectDate}" Style="{StaticResource FormLabel}"/>
                    <DatePicker x:Name="LastInspPicker"
                                Style="{StaticResource InputDatePicker}"
                                DisplayDateEnd="{x:Static System:DateTime.Today}"
                                Margin="0,0,0,10"
                                TabIndex="7"/>

                    <!-- Status -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_Status}" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="StatusCombo"
                              Style="{StaticResource InputComboBox}"
                              Margin="0,0,0,10"
                              TabIndex="8"
                              SelectionChanged="StatusCombo_SelectionChanged"
                              SelectedIndex="0"
                              IsEditable="False">
                        <ComboBoxItem Content="{x:Static res:Strings.Common_Status_Operational}" Tag="Operational"/>
                        <ComboBoxItem Content="{x:Static res:Strings.Common_Status_OutOfService}" Tag="Out of Service"/>
                    </ComboBox>

                    <!-- Note -->
                    <TextBlock Text="{x:Static res:Strings.AHC_Label_NoteOptional}" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="NoteBox"
                             Height="60"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="White"
                             BorderBrush="{StaticResource InputBorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,10"
                             TabIndex="9"/>

                    <!-- ===== Service History (card) - now inside the same ScrollViewer ===== -->
                    <Border x:Name="ServiceHistoryPanel"
                            Visibility="Collapsed"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Background="#FAFAFA"
                            Padding="12"
                            Margin="0,10,0,0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- header -->
                                <RowDefinition Height="Auto"/>
                                <!-- empty/info text -->
                                <RowDefinition Height="*"/>
                                <!-- grid -->
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <DockPanel Grid.Row="0" LastChildFill="False">
                                <TextBlock Text="{x:Static res:Strings.AHC_ServiceHistory_Title}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2E3B4E"
                                           Margin="0,0,8,6"/>
                                <Border Background="#ECEFF1"
                                        BorderBrush="#CFD8DC"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="8,3"
                                        Margin="6,0,0,0">
                                    <TextBlock x:Name="ServiceHistoryCountText"
                                               Foreground="#37474F"
                                               FontWeight="SemiBold"
                                               Text="{x:Static res:Strings.AHC_ServiceHistory_Zero}"/>
                                </Border>
                            </DockPanel>

                            <!-- Empty state -->
                            <TextBlock x:Name="ServiceHistoryEmptyText"
                                       Grid.Row="1"
                                       Margin="0,6,0,8"
                                       Foreground="{StaticResource MutedBrush}"
                                       Text="{x:Static res:Strings.AHC_ServiceHistory_Empty}"
                                       Visibility="Collapsed"/>

                            <!-- Grid -->
                            <DataGrid x:Name="ServiceHistoryGrid"
                                      Grid.Row="2"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      RowHeight="34"
                                      Margin="0,4,0,0"
                                      MouseLeftButtonUp="ServiceHistoryGrid_MouseLeftButtonUp"
                                      MaxHeight="360"
                                      ScrollViewer.CanContentScroll="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding ServiceID}" Header="{x:Static res:Strings.AHC_SH_Col_Id}" Width="50"/>
                                    <DataGridTextColumn Binding="{Binding Date}" Header="{x:Static res:Strings.AHC_SH_Col_Date}" Width="110"/>
                                    <DataGridTextColumn Binding="{Binding Technician}" Header="{x:Static res:Strings.AHC_SH_Col_Technician}" Width="150"/>
                                    <DataGridTextColumn Binding="{Binding Summary}" Header="{x:Static res:Strings.AHC_SH_Col_Summary}" Width="*"/>
                                    <DataGridTextColumn Binding="{Binding Status}" Header="{x:Static res:Strings.AHC_SH_Col_Status}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button x:Name="SaveButton"
                        Content="{x:Static res:Strings.AHC_Btn_Save}"
                        Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"
                        TabIndex="10"/>
                <Button Content="{x:Static res:Strings.AHC_Btn_Cancel}"
                        Style="{StaticResource CancelButton}"
                        Click="Cancel_Click"
                        TabIndex="11"/>
                <Button x:Name="DeleteButton"
                        Content="{x:Static res:Strings.AHC_Btn_Delete}"
                        Style="{StaticResource DeleteButtonStyle}"
                        Visibility="Collapsed"
                        Click="Delete_Click"
                        TabIndex="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
