<UserControl x:Class="HouseholdMS.View.UserControls.YrMeteogramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="160" d:DesignWidth="420"
             x:Name="Root">
    <Border CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10"
            Background="White" Cursor="Hand"
            MouseLeftButtonUp="Tile_MouseLeftButtonUp">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="🌤" FontSize="14" Margin="0,0,6,0"/>
                    <TextBlock Text="Sucre Department — Meteogram (yr.no)"
                               FontWeight="SemiBold" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="BtnReload" Content="Reload" Padding="10,4" Margin="0,0,0,0"
                            Click="BtnReload_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Compact summary -->
            <Border Grid.Row="1" x:Name="SummaryPanel"
                    Background="#FAFAFA" BorderBrush="#E6E6E6" BorderThickness="1"
                    CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBlock x:Name="LineNow"  FontSize="16" FontWeight="Bold" Text="—"/>
                    <TextBlock x:Name="LineNext" Margin="0,2,0,0"                Text="—"/>
                    <TextBlock x:Name="LineMeta" Margin="0,6,0,0" Foreground="#666" FontSize="12"
                               Text="Loading forecast…"/>
                </StackPanel>
            </Border>

            <!-- WebView host for full mode (hidden in compact) -->
            <Grid Grid.Row="1" x:Name="WebHost" Visibility="Collapsed"/>

            <!-- Fallback (no 'Open in Browser') -->
            <Border x:Name="FallbackPanel" Grid.Row="1" Visibility="Collapsed"
                    Background="#FFF9F9F9" BorderBrush="#DDD" BorderThickness="1"
                    CornerRadius="8" Padding="14">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                    <TextBlock Text="Can’t display the meteogram here." FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                    <TextBlock Text="Install the WebView2 runtime or try copying the link."
                               Foreground="#666" TextAlignment="Center" Margin="0,4,0,0"/>
                    <Button Content="Copy Link" Padding="10,4" Margin="0,8,0,0" Click="BtnCopy_Click"/>
                    <TextBlock x:Name="TxtError" Foreground="#A33" TextWrapping="Wrap" TextAlignment="Center" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock Grid.Row="2" x:Name="LblStatus" Foreground="#666" FontSize="12"/>
        </Grid>
    </Border>
</UserControl>
