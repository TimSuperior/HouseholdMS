<Window x:Class="HouseholdMS.View.UserControls.YrMeteogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meteogram — yr.no" Height="720" Width="1100"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
            <TextBlock Text="🌤 Full Meteogram (yr.no)" FontWeight="Bold" FontSize="16"
                       VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Reload" Click="BtnReload_Click" Margin="0,0,8,0" Padding="12,6"/>
                <Button Content="Open in Browser" Click="BtnOpen_Click" Padding="12,6"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" x:Name="WebHost"/>
        <Border x:Name="FallbackPanel" Grid.Row="1" Visibility="Collapsed"
                Background="#FFF9F9F9" BorderBrush="#DDD" BorderThickness="1"
                CornerRadius="8" Padding="14" Margin="8">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                <TextBlock Text="Can’t display the meteogram here." FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                <TextBlock Text="Install the WebView2 runtime or open the SVG in your browser."
                           Foreground="#666" TextAlignment="Center" Margin="0,4,0,0"/>
                <Button Content="Open Meteogram" Padding="10,4" Margin="0,8,0,0" Click="BtnOpen_Click"/>
                <TextBlock x:Name="TxtError" Foreground="#A33" TextWrapping="Wrap" TextAlignment="Center" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="2" x:Name="LblStatus" Foreground="#666" FontSize="12" Margin="8"/>
    </Grid>
</Window>
