<UserControl x:Class="HouseholdMS.View.UserControls.EpeverMonitorControl"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:charts="http://schemas.syncfusion.com/wpf"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="980"
             Background="#F7F8FA" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Accent" Color="#2563EB"/>
        <SolidColorBrush x:Key="AccentSoft" Color="#EEF2FF"/>
        <SolidColorBrush x:Key="Border" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Good" Color="#16A34A"/>
        <SolidColorBrush x:Key="Warn" Color="#D97706"/>
        <SolidColorBrush x:Key="Bad" Color="#DC2626"/>
        <SolidColorBrush x:Key="Muted" Color="#6B7280"/>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <LinearGradientBrush x:Key="HeaderBg" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1D4ED8" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="Chip" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentSoft}"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- FIXED: pill header now uses Header, not Content -->
        <Style x:Key="PillTab" TargetType="TabItem">
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="#F3F4F6" CornerRadius="8"
                                BorderBrush="{StaticResource Border}" BorderThickness="1">
                            <ContentPresenter ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0E7FF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="#1D4ED8"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="{StaticResource HeaderBg}" Padding="14,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static res:Strings.EPEV_Header_Title}" Foreground="White" FontWeight="Bold" FontSize="18" Margin="2"/>
                    <Border Style="{StaticResource Chip}">
                        <TextBlock Text="{x:Static res:Strings.EPEV_Header_ReadOnlyChip}" Foreground="#1D4ED8" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static res:Strings.EPEV_Header_StatusLabel}" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtLink" Text="{x:Static res:Strings.EPEV_Link_Disconnected}" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="White" BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1" Padding="10">
            <WrapPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Strings.EPEV_Toolbar_Port}" VerticalAlignment="Center" Margin="2,0"/>
                <ComboBox x:Name="CmbPorts" Width="180"/>
                <Button x:Name="BtnRefresh" Content="{x:Static res:Strings.EPEV_Btn_Refresh}" Click="BtnRefresh_Click"/>

                <TextBlock Text="{x:Static res:Strings.EPEV_Toolbar_Baud}" VerticalAlignment="Center" Margin="16,0,2,0"/>
                <ComboBox x:Name="CmbBaud" Width="110">
                    <ComboBoxItem Content="115200" IsSelected="True"/>
                    <ComboBoxItem Content="9600"/>
                    <ComboBoxItem Content="57600"/>
                    <ComboBoxItem Content="19200"/>
                </ComboBox>

                <TextBlock Text="{x:Static res:Strings.EPEV_Toolbar_ID}" VerticalAlignment="Center" Margin="16,0,2,0"/>
                <TextBox x:Name="TxtId" Width="50" Text="1"/>

                <TextBlock Text="{x:Static res:Strings.EPEV_Toolbar_Interval}" VerticalAlignment="Center" Margin="16,0,2,0"/>
                <ComboBox x:Name="CmbInterval" Width="100" SelectionChanged="CmbInterval_SelectionChanged">
                    <ComboBoxItem Content="{x:Static res:Strings.EPEV_Interval_1s}" IsSelected="True"/>
                    <ComboBoxItem Content="{x:Static res:Strings.EPEV_Interval_2s}"/>
                    <ComboBoxItem Content="{x:Static res:Strings.EPEV_Interval_5s}"/>
                </ComboBox>

                <Button x:Name="BtnConnect" Content="{x:Static res:Strings.EPEV_Btn_Connect}" Background="{StaticResource Accent}" Foreground="White" Click="BtnConnect_Click"/>
                <Button x:Name="BtnDisconnect" Content="{x:Static res:Strings.EPEV_Btn_Disconnect}" Click="BtnDisconnect_Click" IsEnabled="False"/>
                <Button x:Name="BtnRead" Content="{x:Static res:Strings.EPEV_Btn_ReadNow}" Click="BtnRead_Click" IsEnabled="False"/>

                <CheckBox x:Name="ChkAuto" Content="{x:Static res:Strings.EPEV_Toolbar_Auto}" IsChecked="True" VerticalAlignment="Center" Margin="8,0" IsEnabled="False"/>
                <TextBlock x:Name="TxtStatus" Foreground="{StaticResource Muted}" Margin="16,0,0,0" VerticalAlignment="Center"/>
            </WrapPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Info cards -->
                <UniformGrid Columns="2" Margin="10">
                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_Device}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtDevVendor" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Device_VendorLabel}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtDevProduct" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Device_ProductLabel}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtDevFw" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Device_FirmwareLabel}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_Rated}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtRatedVin" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Rated_PvRatedInputVoltage}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtRatedChgA" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Rated_ChargeCurrent}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtRatedLoadA" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Rated_LoadCurrent}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_PVArray}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtPvV" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Voltage}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtPvA" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Current}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtPvW" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Power}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_Battery}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtBatV" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Voltage}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtBatA" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_ChargeCurrent}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtBatW" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_ChargePower}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_LoadOutput}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtLoadV" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Voltage}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtLoadA" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Current}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtLoadW" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_Power}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_State}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtSoc" FontSize="24">
                                <Run Text="{x:Static res:Strings.EPEV_Label_SOC}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtStage" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Label_ChargeStage}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtUpdated" Foreground="{StaticResource Muted}">
                                <Run Text="{x:Static res:Strings.EPEV_Label_LastUpdate}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_Temperatures}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtTempBatt" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Temp_Battery}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtTempAmb" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Temp_Ambient}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtTempCtrl" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Temp_Controller}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Card_TodayExtremes}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtBattVmaxToday" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Today_BattVmax}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                            <TextBlock x:Name="TxtBattVminToday" FontSize="18">
                                <Run Text="{x:Static res:Strings.EPEV_Today_BattVmin}"/><Run Text=" "/><Run Text="{x:Static res:Strings.Common_NoDataDash}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- === One chart area with tab buttons === -->
                <Border Margin="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                            <TextBlock Text="{x:Static res:Strings.EPEV_Section_RealtimeCurves}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            <Button Content="{x:Static res:Strings.EPEV_Btn_ResetView}" Click="BtnResetZoom_Click" Margin="10,0,0,0"/>
                        </StackPanel>

                        <TabControl x:Name="TabsRealtime"
                                    Margin="0,8,0,0"
                                    ItemContainerStyle="{StaticResource PillTab}"
                                    SelectionChanged="TabsRealtime_SelectionChanged">

                            <!-- Voltage -->
                            <TabItem Header="{x:Static res:Strings.EPEV_Tab_Voltage}">
                                <charts:SfChart x:Name="ChartVoltage" Margin="6,2,6,6" MouseWheel="Chart_MouseWheel">
                                    <charts:SfChart.PrimaryAxis>
                                        <charts:DateTimeAxis x:Name="VoltXAxis" Header="{x:Static res:Strings.EPEV_Axis_Time}" IntervalType="Seconds" LabelFormat="HH:mm:ss"/>
                                    </charts:SfChart.PrimaryAxis>
                                    <charts:SfChart.SecondaryAxis>
                                        <charts:NumericalAxis x:Name="VoltYAxis" Header="{x:Static res:Strings.EPEV_Axis_VoltV}" LabelFormat="0.##"/>
                                    </charts:SfChart.SecondaryAxis>
                                    <charts:SfChart.Legend>
                                        <charts:ChartLegend/>
                                    </charts:SfChart.Legend>
                                    <charts:SfChart.Behaviors>
                                        <charts:ChartZoomPanBehavior x:Name="ZoomPanVolt" EnableMouseWheelZooming="True" EnablePanning="True" ZoomMode="XY"/>
                                        <charts:ChartTrackBallBehavior ShowLine="True"/>
                                    </charts:SfChart.Behaviors>

                                    <charts:FastLineSeries ItemsSource="{Binding VoltSolar}"   XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Solar}"   StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding VoltBattery}" XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Battery}" StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding VoltLoad}"    XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Load}"    StrokeThickness="2"/>
                                </charts:SfChart>
                            </TabItem>

                            <!-- Current -->
                            <TabItem Header="{x:Static res:Strings.EPEV_Tab_Current}">
                                <charts:SfChart x:Name="ChartCurrent" Margin="6,2,6,6" MouseWheel="Chart_MouseWheel">
                                    <charts:SfChart.PrimaryAxis>
                                        <charts:DateTimeAxis x:Name="CurrXAxis" Header="{x:Static res:Strings.EPEV_Axis_Time}" IntervalType="Seconds" LabelFormat="HH:mm:ss"/>
                                    </charts:SfChart.PrimaryAxis>
                                    <charts:SfChart.SecondaryAxis>
                                        <charts:NumericalAxis x:Name="CurrYAxis" Header="{x:Static res:Strings.EPEV_Axis_CurrA}" LabelFormat="0.##"/>
                                    </charts:SfChart.SecondaryAxis>
                                    <charts:SfChart.Legend>
                                        <charts:ChartLegend/>
                                    </charts:SfChart.Legend>
                                    <charts:SfChart.Behaviors>
                                        <charts:ChartZoomPanBehavior x:Name="ZoomPanCurr" EnableMouseWheelZooming="True" EnablePanning="True" ZoomMode="XY"/>
                                        <charts:ChartTrackBallBehavior ShowLine="True"/>
                                    </charts:SfChart.Behaviors>

                                    <charts:FastLineSeries ItemsSource="{Binding CurrSolar}"   XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Solar}"   StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding CurrBattery}" XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Battery}" StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding CurrLoad}"    XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Load}"    StrokeThickness="2"/>
                                </charts:SfChart>
                            </TabItem>

                            <!-- Power -->
                            <TabItem Header="{x:Static res:Strings.EPEV_Tab_Power}">
                                <charts:SfChart x:Name="ChartPower" Margin="6,2,6,6" MouseWheel="Chart_MouseWheel">
                                    <charts:SfChart.PrimaryAxis>
                                        <charts:DateTimeAxis x:Name="PowerXAxis" Header="{x:Static res:Strings.EPEV_Axis_Time}" IntervalType="Seconds" LabelFormat="HH:mm:ss"/>
                                    </charts:SfChart.PrimaryAxis>
                                    <charts:SfChart.SecondaryAxis>
                                        <charts:NumericalAxis x:Name="PowerYAxis" Header="{x:Static res:Strings.EPEV_Axis_PowerW}" LabelFormat="0.#"/>
                                    </charts:SfChart.SecondaryAxis>
                                    <charts:SfChart.Legend>
                                        <charts:ChartLegend/>
                                    </charts:SfChart.Legend>
                                    <charts:SfChart.Behaviors>
                                        <charts:ChartZoomPanBehavior x:Name="ZoomPanPower" EnableMouseWheelZooming="True" EnablePanning="True" ZoomMode="XY"/>
                                        <charts:ChartTrackBallBehavior ShowLine="True"/>
                                    </charts:SfChart.Behaviors>

                                    <charts:FastLineSeries ItemsSource="{Binding PowerSolar}"   XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Solar}"   StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding PowerBattery}" XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Battery}" StrokeThickness="2"/>
                                    <charts:FastLineSeries ItemsSource="{Binding PowerLoad}"    XBindingPath="Time" YBindingPath="Value" Label="{x:Static res:Strings.EPEV_Series_Load}"    StrokeThickness="2"/>
                                </charts:SfChart>
                            </TabItem>
                        </TabControl>
                    </DockPanel>
                </Border>

                <!-- Raw / Debug and Inspector (unchanged logic; localized labels) -->
                <UniformGrid Columns="2" Margin="10">
                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Section_RawDebug}" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtRaw" Text="—" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"/>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Tip_RS485}" Foreground="{StaticResource Muted}" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border>
                        <StackPanel>
                            <TextBlock Text="{x:Static res:Strings.EPEV_Section_Inspector}" FontWeight="Bold" Margin="0,0,0,6"/>
                            <WrapPanel>
                                <TextBlock Text="{x:Static res:Strings.EPEV_Label_Start}" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtInspectorStart" Width="90" Text="0x3100"/>
                                <TextBlock Text="{x:Static res:Strings.EPEV_Label_Count}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBox x:Name="TxtInspectorCount" Width="60" Text="32"/>
                                <Button Content="{x:Static res:Strings.EPEV_Btn_Read}" Click="BtnInspectorRead_Click" Margin="10,0,0,0"/>
                            </WrapPanel>
                            <ListView x:Name="ListInspector" Margin="0,8,0,0" Height="160">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="{x:Static res:Strings.EPEV_Col_Index}" Width="60" DisplayMemberBinding="{Binding Index}"/>
                                        <GridViewColumn Header="{x:Static res:Strings.EPEV_Col_ValueHex}" Width="90" DisplayMemberBinding="{Binding Hex}"/>
                                        <GridViewColumn Header="{x:Static res:Strings.EPEV_Col_ValueDec}" Width="90" DisplayMemberBinding="{Binding Dec}"/>
                                        <GridViewColumn Header="{x:Static res:Strings.EPEV_Col_Scaled100}" Width="90" DisplayMemberBinding="{Binding Scaled}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
