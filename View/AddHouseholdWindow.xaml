<Window x:Class="HouseholdMS.View.AddHouseholdWindow"
        xmlns:userControls="clr-namespace:HouseholdMS.View.UserControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        Title="Add New Household" Height="400" Width="400" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10">
            <userControls:TxtBox x:Name="OwnerBox" Placeholder="Owner Name" Margin="0,0,0,10"/>
            <userControls:TxtBox x:Name="AddressBox" Placeholder="Address" Margin="0,0,0,10"/>
            <userControls:TxtBox x:Name="ContactBox" Placeholder="Contact" Margin="0,0,0,10"/>
            <DatePicker x:Name="InstDatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Margin="0,0,0,10"/>
            <DatePicker x:Name="LastInspPicker" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
