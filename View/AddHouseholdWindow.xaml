<Window x:Class="HouseholdMS.View.AddHouseholdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:HouseholdMS.View.UserControls"
        Title="Add New Household"
        Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border Background="#f9f9f9" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Fields -->
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Owner Name" FontWeight="Bold" Margin="0,0,0,4"/>
                <userControls:TxtBox x:Name="OwnerBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Address" FontWeight="Bold" Margin="0,0,0,4"/>
                <userControls:TxtBox x:Name="AddressBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Contact Number" FontWeight="Bold" Margin="0,0,0,4"/>
                <userControls:TxtBox x:Name="ContactBox" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Installation Date" FontWeight="Bold" Margin="0,0,0,4"/>
                <DatePicker x:Name="InstDatePicker" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Last Inspection Date" FontWeight="Bold" Margin="0,0,0,4"/>
                <DatePicker x:Name="LastInspPicker" Height="30" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="✔ Save" Width="90" Margin="0,0,10,0" Height="35"
                        Background="#4CAF50" Foreground="White" Click="Save_Click"/>

                <Button Content="✖ Cancel" Width="90" Height="35"
                        Background="#F44336" Foreground="White" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
