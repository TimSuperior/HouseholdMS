<Window x:Class="HouseholdMS.View.AddHouseholdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:HouseholdMS.View.UserControls"
        Title="Add New Household"
        Height="530" Width="440"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#f0f2f5">

    <Border Background="White"
            Padding="25"
            CornerRadius="12"
            BorderBrush="#e0e0e0"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Fields -->
            <StackPanel VerticalAlignment="Top" Margin="0,0,0,15">
                <TextBlock Text="Owner Name" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,6"/>
                <userControls:TxtBox x:Name="OwnerBox" Height="38" Margin="0,0,0,14"/>

                <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,6"/>
                <userControls:TxtBox x:Name="AddressBox" Height="38" Margin="0,0,0,14"/>

                <TextBlock Text="Contact Number" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,6"/>
                <userControls:TxtBox x:Name="ContactBox" Height="38" Margin="0,0,0,14"/>

                <TextBlock Text="Installation Date" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,6"/>
                <DatePicker x:Name="InstDatePicker"
                            Height="38"
                            Padding="5"
                            BorderBrush="#C0C0C0"
                            BorderThickness="1"
                            Background="White"
                            SelectedDateFormat="Short"
                            VerticalContentAlignment="Center"
                            Margin="0,0,0,14"/>

                <TextBlock Text="Last Inspection Date" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,6"/>
                <DatePicker x:Name="LastInspPicker"
                            Height="38"
                            Padding="5"
                            BorderBrush="#C0C0C0"
                            BorderThickness="1"
                            Background="White"
                            SelectedDateFormat="Short"
                            VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="✔ Save"
                        Width="100"
                        Height="38"
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        Click="Save_Click"/>

                <Button Content="✖ Cancel"
                        Width="100"
                        Height="38"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Background="#F44336"
                        Foreground="White"
                        BorderBrush="#F44336"
                        BorderThickness="1"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
