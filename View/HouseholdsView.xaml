<UserControl x:Class="HouseholdMS.View.HouseholdsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HouseholdMS.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="#f9f9f9" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search + Add -->
                <RowDefinition Height="*"/>
                <!-- ListView with scroll -->
                <RowDefinition Height="Auto"/>
                <!-- Edit/Delete -->
            </Grid.RowDefinitions>

            <!-- Search + Add -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <TextBox x:Name="SearchBox"
                         Width="250"
                         Height="30"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         Text="Search by name, address, or contact"
                         Foreground="Gray"
                         GotFocus="ClearText"
                         LostFocus="ResetText"
                         Tag="Search by name, address, or contact"
                         TextChanged="SearchBox_TextChanged"/>

                <Button Content="➕ Add Household"
                        Width="150"
                        Height="30"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="AddHouseholdButton_Click"/>
            </StackPanel>

            <!-- Household List with Scroll -->
            <ListView x:Name="HouseholdListView"
          Grid.Row="1"
          Background="White"
          BorderBrush="#DDD"
          BorderThickness="1"
          SelectionMode="Single"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding HouseholdID}" Width="80"/>
                        <GridViewColumn Header="Owner Name" DisplayMemberBinding="{Binding OwnerName}" Width="150"/>
                        <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}" Width="200"/>
                        <GridViewColumn Header="Contact" DisplayMemberBinding="{Binding ContactNum}" Width="100"/>
                        <GridViewColumn Header="Installed" DisplayMemberBinding="{Binding InstDate}" Width="100"/>
                        <GridViewColumn Header="Last Inspection" DisplayMemberBinding="{Binding LastInspDate}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>


            <!-- Edit/Delete -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="✏ Edit Selected"
                        Width="120"
                        Margin="0,0,10,0"
                        Background="#2196F3"
                        Foreground="White"
                        Click="EditHousehold_Click"/>

                <Button Content="🗑 Delete Selected"
                        Width="120"
                        Background="#F44336"
                        Foreground="White"
                        Click="DeleteHousehold_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
