<Window x:Class="HouseholdMS.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Width="800" Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">
    <Grid>
        <Grid.Resources>
            <!-- Shared card style -->
            <Style x:Key="Card" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#DDD"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="24"/>
                <Setter Property="Width" Value="420"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="447*"/>
        </Grid.ColumnDefinitions>

        <!-- ========== LOGIN PANEL ========== -->
        <Border x:Name="LoginCard" Style="{StaticResource Card}" HorizontalAlignment="Left" Margin="78,0,0,0" Grid.Column="1">
            <Border.LayoutTransform>
                <ScaleTransform
                    ScaleX="{DynamicResource AppUiScale}"
                    ScaleY="{DynamicResource AppUiScale}"/>
            </Border.LayoutTransform>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0">
                <TextBlock Text="Welcome Back"
                           FontSize="24" FontWeight="Bold" Foreground="#333"
                           TextAlignment="Center" Margin="0,0,0,24"/>

                <TextBlock Text="Username" FontSize="13" Margin="5,0,0,4" Foreground="#555"/>
                <TextBox x:Name="LoginUsernameBox"
                         Height="40" Margin="0,0,0,12" Padding="10,0"
                         Background="#FAFAFA" BorderBrush="#CCC" BorderThickness="1"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Password" FontSize="13" Margin="5,0,0,4" Foreground="#555"/>
                <PasswordBox x:Name="LoginPasswordBox"
                             Height="40" Margin="0,0,0,20" Padding="10,0"
                             Background="#FAFAFA" BorderBrush="#CCC" BorderThickness="1"
                             VerticalContentAlignment="Center"/>

                <Button Content="🔓 Login"
                        Height="44" Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" BorderThickness="0"
                        Margin="0,0,0,12" Cursor="Hand"
                        IsDefault="True"
                        Click="Login_Click"/>

                <Button Content="➕ Register New User"
                        Height="40" Background="#ddd" Foreground="#333"
                        FontWeight="SemiBold" BorderThickness="0"
                        Margin="0,0,0,12" Cursor="Hand"
                        Click="ShowRegister_Click"/>

                <Button Content="❌ Exit"
                        Height="40" Background="#E53935" Foreground="White"
                        FontWeight="SemiBold" BorderThickness="0"
                        Cursor="Hand"
                        Click="Exit_Click"/>
            </StackPanel>
        </Border>

        <!-- ========== REGISTER PANEL ========== -->
        <Border x:Name="RegisterCard" Style="{StaticResource Card}" Visibility="Collapsed" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="50,0,0,0">
            <Border.LayoutTransform>
                <ScaleTransform
                    ScaleX="{DynamicResource AppUiScale}"
                    ScaleY="{DynamicResource AppUiScale}"/>
            </Border.LayoutTransform>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0">
                <TextBlock Text="Create New Account"
                           FontSize="24" FontWeight="Bold" Foreground="#333"
                           TextAlignment="Center" Margin="0,0,0,24"/>

                <TextBlock Text="Name" FontSize="13" Margin="5,0,0,4" Foreground="#555"/>
                <TextBox x:Name="RegNameBox"
                         Height="40" Margin="0,0,0,12" Padding="10,0"
                         Background="#FAFAFA" BorderBrush="#CCC" BorderThickness="1"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Username" FontSize="13" Margin="5,0,0,4" Foreground="#555"/>
                <TextBox x:Name="RegUsernameBox"
                         Height="40" Margin="0,0,0,12" Padding="10,0"
                         Background="#FAFAFA" BorderBrush="#CCC" BorderThickness="1"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Password" FontSize="13" Margin="5,0,0,4" Foreground="#555"/>
                <PasswordBox x:Name="RegPasswordBox"
                             Height="40" Margin="0,0,0,20" Padding="10,0"
                             Background="#FAFAFA" BorderBrush="#CCC" BorderThickness="1"
                             VerticalContentAlignment="Center"/>

                <Button Content="✅ Register"
                        Height="44" Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" BorderThickness="0"
                        Margin="0,0,0,12" Cursor="Hand"
                        Click="RegisterButton_Click"/>

                <Button Content="⬅ Back to Login"
                        Height="40" Background="#ddd" Foreground="#333"
                        FontWeight="SemiBold" BorderThickness="0"
                        Cursor="Hand"
                        Click="BackToLoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
