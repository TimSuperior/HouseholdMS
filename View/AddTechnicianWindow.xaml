<Window x:Class="HouseholdMS.View.AddTechnicianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Technician"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBox x:Name="NameBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Contact Number:" FontWeight="Bold"/>
            <TextBox x:Name="ContactBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Assigned Area:" FontWeight="Bold"/>
            <TextBox x:Name="AreaBox" Height="30" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="✔ OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="✖ Cancel" Width="80" Click="Cancel_Click"
                    Background="#F44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
