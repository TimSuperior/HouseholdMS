<Window x:Class="HouseholdMS.View.AddInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Restock Inventory"
        Height="300" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#f0f2f5">

    <Border Padding="20" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Section -->
            <StackPanel Margin="0,0,0,10">
                <!-- Item Type -->
                <TextBlock Text="Item Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ItemTypeBox" Height="35" FontSize="14" Padding="5">
                    <ComboBoxItem Content="Controller"/>
                    <ComboBoxItem Content="Inverter"/>
                    <ComboBoxItem Content="Battery"/>
                    <ComboBoxItem Content="Panel"/>
                    <ComboBoxItem Content="Wiring"/>
                    <ComboBoxItem Content="Charger"/>
                    <ComboBoxItem Content="Cable"/>
                </ComboBox>

                <!-- Quantity -->
                <TextBlock Text="Quantity to Add" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <TextBox x:Name="QuantityBox" Height="35" FontSize="14" Padding="5" Text="10"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="✔ OK" Width="90" Height="35" Margin="0,0,10,0" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="Ok_Click"
                        Cursor="Hand"/>

                <Button Content="✖ Cancel" Width="90" Height="35" 
                        Background="#F44336" Foreground="White" FontWeight="Bold" Click="Cancel_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
