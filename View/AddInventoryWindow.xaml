<Window x:Class="HouseholdMS.View.AddInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Restock Item" Height="280" Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
        WindowStyle="SingleBorderWindow">
    <Border Background="#f9f9f9" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Fields -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Item Type:" Margin="0,0,0,5" FontWeight="Bold"/>
                <ComboBox x:Name="ItemTypeBox" Height="30">
                    <ComboBoxItem Content="Controller"/>
                    <ComboBoxItem Content="Inverter"/>
                    <ComboBoxItem Content="Battery"/>
                    <ComboBoxItem Content="Panel"/>
                    <ComboBoxItem Content="Wiring"/>
                    <ComboBoxItem Content="Charger"/>
                    <ComboBoxItem Content="Cable"/>
                </ComboBox>

                <TextBlock Text="Quantity to Add:" Margin="0,15,0,5" FontWeight="Bold"/>
                <TextBox x:Name="QuantityBox" Height="30" Text="10"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="✔ OK" Width="80" Margin="0,0,10,0" Click="Ok_Click" Background="#4CAF50" Foreground="White"/>
                <Button Content="✖ Cancel" Width="80" Click="Cancel_Click" Background="#F44336" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
