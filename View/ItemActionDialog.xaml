<Window x:Class="HouseholdMS.View.ItemActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Action"
        Height="380" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F6F7FB"
        ShowInTaskbar="False">

    <Border CornerRadius="14" BorderBrush="#E5E7EB" BorderThickness="1" Padding="18" Background="White" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock x:Name="HeaderText" FontSize="18" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock x:Name="SubText" Foreground="#6B7280" Margin="0,4,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Quantity" VerticalAlignment="Center" Margin="0,0,8,10" FontWeight="SemiBold" Foreground="#374151"/>
                <TextBox x:Name="QuantityBox"
                         Grid.Row="0" Grid.Column="1"
                         Height="36" Margin="0,0,0,10"
                         PreviewTextInput="QuantityBox_PreviewTextInput"
                         DataObject.Pasting="QuantityBox_Pasting"/>

                <TextBlock x:Name="PersonLabel" Grid.Row="1" Grid.Column="0" Text="Person" VerticalAlignment="Center" Margin="0,0,8,10" FontWeight="SemiBold" Foreground="#374151"/>
                <TextBox x:Name="PersonBox" Grid.Row="1" Grid.Column="1" Height="36" Margin="0,0,0,10"/>

                <TextBlock x:Name="NoteLabel" Grid.Row="2" Grid.Column="0" Text="Note" VerticalAlignment="Top" Margin="0,6,8,0" FontWeight="SemiBold" Foreground="#374151"/>
                <TextBox x:Name="NoteBox" Grid.Row="2" Grid.Column="1" Height="70" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OkButton" Content="✔ OK" Width="100" Height="36" Margin="0,10,10,0" Background="#3B82F6" Foreground="White" Click="Ok_Click"/>
                <Button Content="✖ Cancel" Width="90" Height="36" Margin="0,10,0,0" Background="#EF4444" Foreground="White" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
