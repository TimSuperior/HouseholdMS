<Window x:Class="HouseholdMS.View.RegisterUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New User"
        Height="440" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">

    <Grid>
        <Border Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="12"
                Padding="20"
                Width="300"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                SnapsToDevicePixels="True">

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0">

                <!-- Title -->
                <TextBlock Text="Create New Account"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Name -->
                <TextBlock Text="Name" FontSize="13" Margin="5,0,0,2" Foreground="#555"/>
                <TextBox x:Name="NameBox"
                         Height="36"
                         Margin="0,0,0,10"
                         Padding="10,0"
                         Background="#FAFAFA"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"/>

                <!-- Username -->
                <TextBlock Text="Username" FontSize="13" Margin="5,0,0,2" Foreground="#555"/>
                <TextBox x:Name="UsernameBox"
                         Height="36"
                         Margin="0,0,0,10"
                         Padding="10,0"
                         Background="#FAFAFA"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="13" Margin="5,0,0,2" Foreground="#555"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="36"
                             Margin="0,0,0,20"
                             Padding="10,0"
                             Background="#FAFAFA"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>

                <!-- Buttons -->
                <Button Content="✅ Register"
                        Height="40"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Click="RegisterButton_Click"/>

                <Button Content="⬅ Back to Login"
                        Height="36"
                        Background="#ddd"
                        Foreground="#333"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0"
                        Cursor="Hand"
                        Click="BackToLoginButton_Click"/>
            </StackPanel>

        </Border>
    </Grid>
</Window>
