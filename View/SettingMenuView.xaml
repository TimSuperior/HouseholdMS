<UserControl x:Class="HouseholdMS.View.SettingMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HouseholdMS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F4F6F8">
        <StackPanel Margin="20">
            <TextBlock Text="⚙ Settings (설정)" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="#333"/>

            <TextBlock Text="Program Configuration Sample (프로그램 설정)" FontSize="16" FontWeight="SemiBold" Margin="0 10 0 5"/>
            <TextBox Width="300" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Measurement Reference Value Sample (측정 기준값)" FontSize="16" FontWeight="SemiBold" Margin="0 10 0 5"/>
            <TextBox Width="300" Height="30" Margin="0 0 0 10"/>

            <Button Content="💾 Save Changes (변경 사항 저장)" Width="180" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
