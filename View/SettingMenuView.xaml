<UserControl x:Class="HouseholdMS.View.SettingMenuView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F4F6F8">
        <StackPanel Margin="20" MaxWidth="720">
            <TextBlock Text="⚙ Settings (설정)" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="#333"/>

            <!-- ===== Typography Card ===== -->
            <Border CornerRadius="10" Background="White" Padding="16" Margin="0,0,0,16"
                    BorderBrush="#E0E4EA" BorderThickness="1">
                <StackPanel x:Name="FontPanel">
                    <TextBlock Text="Text Size (글자 크기)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="Preset:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="PresetCombo" Width="180" SelectionChanged="PresetCombo_SelectionChanged">
                            <ComboBoxItem Content="X0.8"  Tag="0.90"/>
                            <ComboBoxItem Content="X1" Tag="1.00"/>
                            <ComboBoxItem Content="X1.25" Tag="1.25"/>
                            <ComboBoxItem Content="X1.5"  Tag="1.50"/>
                            <ComboBoxItem Content="X2"   Tag="2.00"/>
                        </ComboBox>

                        <TextBlock Text="Scale:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                        <Slider x:Name="ScaleSlider"
                                Minimum="0.85" Maximum="1.50"
                                TickFrequency="0.05" IsSnapToTickEnabled="True"
                                Width="220"
                                ValueChanged="ScaleSlider_ValueChanged"/>
                        <TextBlock Text="{Binding ElementName=ScaleSlider, Path=Value, StringFormat=x{0:F2}}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button x:Name="ResetDefaultBtn" Content="↺ Reset to Default (기본값)"
                                Width="180" Height="36" Margin="0,0,8,0"
                                Click="ResetDefaultBtn_Click"/>
                        <TextBlock Text="Changes apply instantly. Click Save to persist for all users."
                                   VerticalAlignment="Center" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ===== Language Card ===== -->
            <Border CornerRadius="10" Background="White" Padding="16" Margin="0,0,0,16"
        BorderBrush="#E0E4EA" BorderThickness="1">
                <StackPanel x:Name="LanguagePanel">
                    <TextBlock Text="Language (언어 / Idioma)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="UI Language:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="LangCombo" Width="220">
                            <ComboBoxItem Content="English (ENG)" Tag="en"/>
                            <ComboBoxItem Content="한국어 (KOR)"   Tag="ko"/>
                            <ComboBoxItem Content="Español (ES)"  Tag="es"/>
                        </ComboBox>
                        <TextBlock Text=" (applies after restart)" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </Border>



            <Button x:Name="SaveButton"
                    Content="💾 Save Changes (변경 사항 저장)"
                    Width="220" Height="40"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Margin="0 20 0 0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
