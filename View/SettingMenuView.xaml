<UserControl x:Class="HouseholdMS.View.SettingMenuView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ====== Visual resources only ====== -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="BgCanvas" Color="#F4F6F8"/>
        <SolidColorBrush x:Key="CardBg" Color="White"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E3E8EF"/>
        <SolidColorBrush x:Key="TitleFg" Color="#1F2937"/>
        <SolidColorBrush x:Key="BodyFg" Color="#374151"/>
        <SolidColorBrush x:Key="SubtleFg" Color="#6B7280"/>
        <SolidColorBrush x:Key="Accent" Color="#2563EB"/>
        <SolidColorBrush x:Key="AccentDark" Color="#1E40AF"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TitleFg}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        <Style x:Key="H2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource BodyFg}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="Help" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SubtleFg}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B6DEB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentDark}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="{StaticResource BodyFg}"/>
            <Setter Property="Background" Value="#EDF2FF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E8FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D7DEFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Pill" TargetType="TextBlock">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Foreground" Value="{StaticResource AccentDark}"/>
            <Setter Property="Background" Value="#E8F0FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="64"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BgCanvas}" UseLayoutRounding="True" SnapsToDevicePixels="True">
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="False">
            <StackPanel Margin="24" MaxWidth="820">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Width="36" Height="36" CornerRadius="18" Background="#E8F0FF" Margin="0,0,10,0">
                        <TextBlock Text="⚙" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Settings (Configuración)" Style="{StaticResource H1}"/>
                </StackPanel>

                <!-- ===== Typography ===== -->
                <Border Style="{StaticResource Card}">
                    <StackPanel x:Name="FontPanel">
                        <TextBlock Text="Text Size (Tamaño de texto)" Style="{StaticResource H2}"/>

                        <!-- Row: Preset + Current scale (no slider) -->
                        <Grid Margin="0,4,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Preset -->
                            <TextBlock Text="Preset (Preajuste):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="PresetCombo"
                                      Grid.Column="1"
                                      Height="32"
                                      SelectionChanged="PresetCombo_SelectionChanged">
                                <ComboBoxItem Content="x0.75" Tag="0.75"/>
                                <ComboBoxItem Content="x1.00" Tag="1.00"/>
                                <ComboBoxItem Content="x1.25" Tag="1.25"/>
                                <ComboBoxItem Content="x1.50" Tag="1.50"/>
                                <ComboBoxItem Content="x1.75" Tag="1.75"/>
                                <ComboBoxItem Content="x2.00" Tag="2.00"/>
                            </ComboBox>

                            <!-- Read-only scale pill -->
                            <TextBlock Grid.Column="3" Text="Scale (Escala):" VerticalAlignment="Center" Margin="16,0,8,0"/>
                            <TextBlock x:Name="ScaleValueText"
                                       Grid.Column="4"
                                       Style="{StaticResource Pill}"
                                       Text="x1.00"/>
                        </Grid>

                        <!-- Row: actions -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="ResetDefaultBtn"
                                    Grid.Column="0"
                                    Content="↺ Reset to Default (Restablecer a predeterminado)"
                                    Height="36"
                                    MinWidth="210"
                                    Click="ResetDefaultBtn_Click"
                                    Style="{StaticResource GhostButton}"/>

                            <TextBlock Grid.Column="1"
                                       Margin="12,8,0,0"
                                       Style="{StaticResource Help}"
                                       Text="Changes apply instantly. Click Save to persist for all users. (Los cambios se aplican al instante. Haz clic en Guardar para conservarlos para todos los usuarios.)"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ===== Language ===== -->
                <Border Style="{StaticResource Card}">
                    <StackPanel x:Name="LanguagePanel">
                        <TextBlock Text="Language (Idioma)" Style="{StaticResource H2}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="UI Language (Idioma de la interfaz):"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox x:Name="LangCombo"
                                      Grid.Row="0" Grid.Column="1"
                                      Height="32">
                                <ComboBoxItem Content="English (ENG)" Tag="en"/>
                                <ComboBoxItem Content="한국어 (KOR)"  Tag="ko"/>
                                <ComboBoxItem Content="Español (ES)" Tag="es"/>
                            </ComboBox>

                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                       Margin="0,8,0,0"
                                       Foreground="{StaticResource SubtleFg}"
                                       TextWrapping="Wrap"
                                       Text="(applies after restart / se aplica tras reiniciar)"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Button x:Name="SaveButton"
                        Content="💾 Save Changes (Guardar cambios)"
                        Width="260"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,8,0,0"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
