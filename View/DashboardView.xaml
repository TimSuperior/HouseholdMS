<UserControl x:Class="HouseholdMS.View.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HouseholdMS.View.Dashboard">
    <UserControl.Resources>

        <!-- Base tile look -->
        <Style x:Key="TileButton" TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="110"/>
            <Setter Property="MinWidth" Value="220"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="#FFFFFF"
                                CornerRadius="16"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#B0B0B0"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Inventory tile = TileButton + low-stock trigger -->
        <Style x:Key="InventoryTileButtonStyle" TargetType="Button" BasedOn="{StaticResource TileButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                    <Setter Property="BorderBrush" Value="#E57373"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Inventory tile template -->
        <DataTemplate DataType="{x:Type local:InventoryTile}">
            <Button Style="{StaticResource InventoryTileButtonStyle}" Click="InventoryTile_Click">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Grid.Row="1" Margin="0,6,0,0"
                               Text="{Binding Remaining, StringFormat=Remaining: {0}}"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding LowStockThreshold, StringFormat=Threshold: {0}}" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding LastRestockedDate, StringFormat=Restocked: {0:yyyy-MM-dd}}"/>
                    </StackPanel>
                </Grid>
            </Button>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Households -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Inventory -->
            <RowDefinition Height="*"/>
            <!-- Row 3: Placeholder -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="12,8">
            <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Row 1: Households (exactly 3 tiles) -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="12,0,12,4">
            <Button Style="{StaticResource TileButton}" Click="OpenOperational_Click">
                <StackPanel>
                    <TextBlock Text="Household Operational" FontWeight="Bold"/>
                    <TextBlock x:Name="OperationalCountText" Text="0" FontSize="30" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource TileButton}" Click="OpenInService_Click">
                <StackPanel>
                    <TextBlock Text="Household In Service" FontWeight="Bold"/>
                    <TextBlock x:Name="InServiceCountText" Text="0" FontSize="30" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource TileButton}" Click="OpenNotOperational_Click">
                <StackPanel>
                    <TextBlock Text="Household Not Operational" FontWeight="Bold"/>
                    <TextBlock x:Name="NotOperationalCountText" Text="0" FontSize="30" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>
        </UniformGrid>

        <!-- Row 2: Inventory (wrap tiles) -->
        <StackPanel Grid.Row="2" Margin="12,8,12,0">
            <DockPanel LastChildFill="True" Margin="0,0,0,6">
                <TextBlock Text="Inventory" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                <!-- Small button to open your InventoryView in a popup -->
                <Button Content="Open List"
                        Padding="8,4"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                        Click="OpenInventoryList_Click"/>
            </DockPanel>

            <Border CornerRadius="16" Background="#FFFFFF" BorderBrush="#DDDDDD" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="InventoryItemsControl"
                                  ItemsSource="{Binding InventoryTiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Margin>
                            <Thickness>4</Thickness>
                        </ItemsControl.Margin>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Row 3: Placeholder (room for 2 future tiles) -->
        <Grid Grid.Row="3" Margin="12,12,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="16" Background="#FFFFFF" BorderBrush="#EEEEEE" BorderThickness="1" Margin="0,0,6,0"/>
            <Border Grid.Column="1" CornerRadius="16" Background="#FFFFFF" BorderBrush="#EEEEEE" BorderThickness="1" Margin="6,0,0,0"/>
            <TextBlock Text="(Reserved for future tiles…)" Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
