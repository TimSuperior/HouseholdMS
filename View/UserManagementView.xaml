<UserControl x:Class="HouseholdMS.View.UserManagementView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HouseholdMS.View"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Converters (defined public in the same namespace in .xaml.cs) -->
        <local:RoleToBrushConverter x:Key="RoleToBrush"/>
        <local:RoleToDisplayConverter x:Key="RoleDisplayConverter"/>
        <local:StatusToDisplayConverter x:Key="StatusDisplayConverter"/>

        <!-- Palette -->
        <SolidColorBrush x:Key="Col.BgCard" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.BgPage" Color="#FFF9F9F9"/>
        <SolidColorBrush x:Key="Col.Border"  Color="#FFE5E7EB"/>
        <SolidColorBrush x:Key="Col.HeaderBg" Color="#FFF3F4F6"/>
        <SolidColorBrush x:Key="Col.HeaderFg" Color="#FF374151"/>
        <SolidColorBrush x:Key="Col.RowHover" Color="#FFF0F7FF"/>
        <SolidColorBrush x:Key="Col.RowSel"   Color="#FFDBEAFE"/>
        <SolidColorBrush x:Key="Col.RowSelBorder" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.Text"     Color="#FF111827"/>
        <SolidColorBrush x:Key="Col.TextMut"  Color="#FF6B7280"/>
        <SolidColorBrush x:Key="Col.Primary"  Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.PrimaryHover" Color="#FF2563EB"/>

        <!-- Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource Col.Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Col.PrimaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact buttons for table-row actions -->
        <Style x:Key="RowActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Search box -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small gray chip button for "Columns" -->
        <Style x:Key="ChipButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="#FFF3F4F6"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="999"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{TemplateBinding Tag}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,10,0"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridView visuals -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource Col.HeaderBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.HeaderFg}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Lightweight container style -->
        <Style x:Key="UserRowContainerStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.RowHover}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource Col.RowSel}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Col.RowSelBorder}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Context menu uses commands on *UserManagementView* -->
        <ContextMenu x:Key="UserRowContextMenu"
                     DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
            <MenuItem Header="{x:Static res:Strings.UM_Context_ChangeRole}">
                <MenuItem Header="{x:Static res:Strings.UM_Context_Guest}"
                          IsEnabled="{Binding CanSetGuest}"
                          Command="{x:Static local:UserManagementView.RoleToGuestCommand}"
                          CommandParameter="{Binding UserID}"/>
                <MenuItem Header="{x:Static res:Strings.UM_Context_Technician}"
                          IsEnabled="{Binding CanSetTech}"
                          Command="{x:Static local:UserManagementView.RoleToTechCommand}"
                          CommandParameter="{Binding UserID}"/>
                <MenuItem Header="{x:Static res:Strings.UM_Context_Admin}"
                          IsEnabled="{Binding CanSetAdmin}"
                          Command="{x:Static local:UserManagementView.RoleToAdminCommand}"
                          CommandParameter="{Binding UserID}"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="{x:Static res:Strings.UM_Context_DeleteUser}"
                      IsEnabled="{Binding CanDelete}"
                      Command="{x:Static local:UserManagementView.DeleteUserCommand}"
                      CommandParameter="{Binding UserID}"/>
        </ContextMenu>

        <!-- Role chip -->
        <DataTemplate x:Key="RoleChipTemplate">
            <Border Padding="10,4" CornerRadius="999"
                    Background="{Binding Role, Converter={StaticResource RoleToBrush}}">
                <TextBlock Text="{Binding Role, Converter={StaticResource RoleDisplayConverter}}"
                           FontWeight="SemiBold" FontSize="14"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border Background="{StaticResource Col.BgPage}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBlock Text="{x:Static res:Strings.UM_Title}"
                           VerticalAlignment="Center" Margin="0,0,12,0"
                           FontWeight="Bold" FontSize="20"
                           DockPanel.Dock="Left"/>

                <TextBox x:Name="SearchBox"
                         Style="{StaticResource SearchBoxStyle}"
                         Width="420"
                         VerticalContentAlignment="Center"
                         Foreground="{StaticResource Col.TextMut}"
                         FontStyle="Italic"
                         Text="{x:Static res:Strings.UM_SearchPlaceholder}"
                         Tag="{x:Static res:Strings.UM_SearchPlaceholder}"
                         GotFocus="SearchBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"
                         KeyUp="SearchBox_KeyUp"
                         DockPanel.Dock="Left"/>

                <!-- Column chooser -->
                <Button x:Name="ColumnFilterButton"
                        Style="{StaticResource ChipButton}"
                        Tag="Columns"
                        Content="All ▾"
                        DockPanel.Dock="Left"
                        Click="ColumnFilterButton_Click"/>

                <Popup x:Name="ColumnPopup"
                       PlacementTarget="{Binding ElementName=ColumnFilterButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       Closed="ColumnPopup_Closed">
                    <Border Background="White"
                            BorderBrush="{StaticResource Col.Border}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="8">
                        <StackPanel Width="260">
                            <TextBlock Text="Choose columns" FontWeight="Bold" Margin="4,0,4,6"/>
                            <ScrollViewer MaxHeight="260" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <CheckBox Content="ID" Tag="UserID" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Name" Tag="Name" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Username" Tag="Username" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Role" Tag="Role" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Phone" Tag="Phone" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Address" Tag="Address" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Assigned Area" Tag="AssignedArea" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Note" Tag="Note" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Status" Tag="StatusLabel" Margin="4" Click="ColumnCheckBox_Click"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Separator Margin="0,6,0,6"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Select all" Margin="4" Click="SelectAllColumns_Click"/>
                                <Button Content="Clear" Margin="4" Click="ClearAllColumns_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>

                <Button x:Name="AddUserButton"
                        Content="{x:Static res:Strings.UM_AddUser}"
                        Style="{StaticResource ActionButtonStyle}"
                        Width="150"
                        DockPanel.Dock="Right"
                        Click="AddUserButton_Click"/>
            </DockPanel>

            <!-- Table card -->
            <Border Grid.Row="1"
                    Background="{StaticResource Col.BgCard}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Col.Border}"
                    BorderThickness="1"
                    Padding="8">
                <Grid>
                    <ListView x:Name="UserListView"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              SelectionMode="Single"
                              MouseDoubleClick="UserListView_MouseDoubleClick"
                              SelectionChanged="UserListView_SelectionChanged">

                        <!-- Inline container style so it always resolves -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem"
                                   BasedOn="{StaticResource UserRowContainerStyle}">
                                <Setter Property="ContextMenu"
                                        Value="{StaticResource UserRowContextMenu}"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_ID}" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding UserID}"
                                                       Foreground="{StaticResource Col.TextMut}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Name}" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Username}" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding Username}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Role}" Width="130"
                                                CellTemplate="{StaticResource RoleChipTemplate}"/>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Phone}" Width="130">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding Phone}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Address}" Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding Address}" ToolTip="{Binding Address}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_AssignedArea}" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding AssignedArea}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Note}" Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding Note}" ToolTip="{Binding Note}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Status}" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding StatusLabel, Converter={StaticResource StatusDisplayConverter}}"
                                                       FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Approval -->
                                <GridViewColumn Header="{x:Static res:Strings.UM_Column_Approval}" Width="240">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Visibility="{Binding ShowApprovalButtons, Converter={StaticResource BoolToVis}}"
                                                  Margin="6,0"
                                                  HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                        Content="{x:Static res:Strings.UM_Approve}"
                                                        Style="{StaticResource RowActionButtonStyle}"
                                                        Margin="0,0,4,0"
                                                        Background="#10B981"
                                                        Command="{x:Static local:UserManagementView.ApproveCommand}"
                                                        CommandParameter="{Binding UserID}"/>

                                                <Button Grid.Column="1"
                                                        Content="{x:Static res:Strings.UM_Decline}"
                                                        Style="{StaticResource RowActionButtonStyle}"
                                                        Background="#EF4444"
                                                        Command="{x:Static local:UserManagementView.DeclineCommand}"
                                                        CommandParameter="{Binding UserID}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Empty state -->
                    <TextBlock Text="{x:Static res:Strings.UM_EmptyState}"
                               Foreground="{StaticResource Col.TextMut}"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=UserListView, Path=HasItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
