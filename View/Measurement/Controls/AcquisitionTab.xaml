<UserControl x:Class="HouseholdMS.View.Measurement.Controls.AcquisitionTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel Margin="8">
        <TextBlock Text="Acquisition" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <WrapPanel Margin="0,0,0,8">
            <Button Content="Run"    Margin="0,0,8,8" Click="Run_Click"/>
            <Button Content="Stop"   Margin="0,0,8,8" Click="Stop_Click"/>
            <Button Content="Single" Margin="0,0,8,8" Click="Single_Click"/>
            <Button Content="Autoset" Margin="0,0,8,8" Click="Autoset_Click"/>
        </WrapPanel>

        <TextBlock Text="Timebase (s/div)" Foreground="#666" Margin="0,0,0,4"/>
        <ComboBox x:Name="CmbTimebase" Width="220" Margin="0,0,0,8">
            <ComboBoxItem Content="1e-6"/>
            <ComboBoxItem Content="2e-6"/>
            <ComboBoxItem Content="5e-6"/>
            <ComboBoxItem Content="1e-5"/>
            <ComboBoxItem Content="2e-5"/>
            <ComboBoxItem Content="5e-5"/>
            <ComboBoxItem Content="1e-4"/>
            <ComboBoxItem Content="2e-4"/>
            <ComboBoxItem Content="5e-4"/>
            <ComboBoxItem Content="1e-3"/>
            <ComboBoxItem Content="2e-3"/>
            <ComboBoxItem Content="5e-3"/>
            <ComboBoxItem Content="1e-2"/>
            <ComboBoxItem Content="2e-2"/>
            <ComboBoxItem Content="5e-2"/>
            <ComboBoxItem Content="1e-1"/>
            <ComboBoxItem Content="2e-1"/>
            <ComboBoxItem Content="5e-1"/>
        </ComboBox>

        <WrapPanel>
            <Button Content="Set Timebase" Margin="0,0,8,0" Click="SetTimebase_Click"/>
            <Button Content="RecordLength?" Click="ReadRecordLength_Click"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
