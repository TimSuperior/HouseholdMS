<UserControl x:Class="HouseholdMS.View.Measurement.Controls.ChannelsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel Margin="8">
        <TextBlock Text="Channels" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

        <WrapPanel Margin="0,0,0,8">
            <CheckBox x:Name="ChkCh1" Content="Plot CH1" IsChecked="True" Margin="0,0,12,0"/>
            <CheckBox x:Name="ChkCh2" Content="Plot CH2" Margin="0,0,12,0"/>
            <CheckBox x:Name="ChkMath" Content="Plot MATH (CH1-CH2)"/>
        </WrapPanel>

        <TextBlock Text="Coupling" Foreground="#666" Margin="0,8,0,4"/>
        <ComboBox x:Name="CmbCoupling" Width="220">
            <ComboBoxItem Content="DC"/>
            <ComboBoxItem Content="AC"/>
            <ComboBoxItem Content="GND"/>
        </ComboBox>

        <TextBlock Text="Scale (V/div)" Foreground="#666" Margin="0,8,0,4"/>
        <ComboBox x:Name="CmbVScale" Width="220">
            <ComboBoxItem Content="0.01"/>
            <ComboBoxItem Content="0.02"/>
            <ComboBoxItem Content="0.05"/>
            <ComboBoxItem Content="0.1"/>
            <ComboBoxItem Content="0.2"/>
            <ComboBoxItem Content="0.5"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="5"/>
        </ComboBox>

        <WrapPanel Margin="0,8,0,0">
            <Button Content="Apply to CH1" Margin="0,0,8,0" Click="ApplyCh1_Click"/>
            <Button Content="Apply to CH2" Click="ApplyCh2_Click"/>
        </WrapPanel>

        <TextBlock Text="Probe (×)" Foreground="#666" Margin="0,12,0,4"/>
        <ComboBox x:Name="CmbProbe" Width="220" SelectedIndex="1">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="100"/>
        </ComboBox>
        <Button Content="Set Probe" Margin="0,8,0,0" Click="SetProbe_Click"/>
    </StackPanel>
</UserControl>
