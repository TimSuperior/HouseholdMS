<UserControl x:Class="HouseholdMS.View.Measurement.Controls.ExportTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel Margin="8">
        <TextBlock Text="Export &amp; Files" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <WrapPanel>
            <Button Content="Save CSV" Margin="0,0,8,8" Click="SaveCsv_Click"/>
            <Button Content="Save PNG" Margin="0,0,8,8" Click="SavePng_Click"/>
        </WrapPanel>
        <TextBlock x:Name="ResultBlock" Foreground="#666" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
