<UserControl x:Class="HouseholdMS.View.Measurement.LivePlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Height="250" Width="Auto">
    <StackPanel>
        <syncfusion:SfChart x:Name="Chart" Height="180">
            <syncfusion:SfChart.PrimaryAxis>
                <syncfusion:DateTimeAxis Header="Time" IntervalType="Seconds" Interval="1"/>
            </syncfusion:SfChart.PrimaryAxis>
            <syncfusion:SfChart.SecondaryAxis>
                <syncfusion:NumericalAxis Header="Value"/>
            </syncfusion:SfChart.SecondaryAxis>

            <syncfusion:LineSeries x:Name="LineSeries"
                                   XBindingPath="Timestamp"
                                   YBindingPath="Value"
                                   StrokeThickness="2"/>
        </syncfusion:SfChart>

        <StackPanel Orientation="Horizontal" Margin="4">
            <Button Content="Start Plot" Width="90" Click="StartPlot_Click"/>
            <Button Content="Stop Plot" Width="90" Margin="6,0,0,0" Click="StopPlot_Click"/>
            <TextBlock Text="Min:" FontWeight="Bold" Margin="20,0,4,0"/>
            <TextBlock x:Name="MinText" Width="70"/>
            <TextBlock Text="Max:" FontWeight="Bold" Margin="12,0,4,0"/>
            <TextBlock x:Name="MaxText" Width="70"/>
            <TextBlock Text="Avg:" FontWeight="Bold" Margin="12,0,4,0"/>
            <TextBlock x:Name="AvgText" Width="70"/>
        </StackPanel>
    </StackPanel>
</UserControl>
