<UserControl x:Class="HouseholdMS.View.InventoryView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:HouseholdMS.Resources"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1200">

    <!-- ========== THEME & STYLES ========== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="Col.BgCard" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Col.BgPage" Color="#FFF9F9F9"/>
        <SolidColorBrush x:Key="Col.Border"  Color="#FFE5E7EB"/>
        <SolidColorBrush x:Key="Col.HeaderBg" Color="#FFF3F4F6"/>
        <SolidColorBrush x:Key="Col.HeaderFg" Color="#FF374151"/>
        <SolidColorBrush x:Key="Col.RowHover" Color="#FFF0F7FF"/>
        <SolidColorBrush x:Key="Col.RowSel"   Color="#FFDBEAFE"/>
        <SolidColorBrush x:Key="Col.RowSelBorder" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.Text"     Color="#FF111827"/>
        <SolidColorBrush x:Key="Col.TextMut"  Color="#FF6B7280"/>
        <SolidColorBrush x:Key="Col.Primary"  Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="Col.PrimaryHover" Color="#FF2563EB"/>
        <SolidColorBrush x:Key="Col.Green" Color="#10B981"/>
        <SolidColorBrush x:Key="Col.GreenHover" Color="#059669"/>
        <SolidColorBrush x:Key="Col.Red" Color="#EF4444"/>
        <SolidColorBrush x:Key="Col.RedHover" Color="#DC2626"/>

        <!-- Row state backgrounds -->
        <SolidColorBrush x:Key="Col.RowWarnBg" Color="#FFFEF3C7"/>
        <SolidColorBrush x:Key="Col.RowDangerBg" Color="#FFFDEAEA"/>

        <!-- Primary action button -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource Col.Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Col.PrimaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Row pill buttons in the actions column -->
        <Style x:Key="RowPillButton" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="92"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btn" CornerRadius="999" Background="{TemplateBinding Background}">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="14" Margin="6,0,6,0" VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,6,0"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btn" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tiny circular arrow buttons for reordering -->
        <Style x:Key="ArrowBtn" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="#FFF3F4F6"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="999"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6E8EC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small gray chip button for "Columns" -->
        <Style x:Key="ChipButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="#FFF3F4F6"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="999"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{TemplateBinding Tag}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,10,0"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search box -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridView styling -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource Col.HeaderBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Col.HeaderFg}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="BorderBrush" Value="{StaticResource Col.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{StaticResource Col.Text}"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="RowOuter" CornerRadius="8" Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Col.Border}" BorderThickness="0,0,0,1" Margin="4,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="SelBar" Grid.Column="0" Background="{StaticResource Col.RowSelBorder}"
                                        CornerRadius="8,0,0,8" Visibility="Collapsed"/>
                                <GridViewRowPresenter Grid.Column="1"
                                                      Content="{TemplateBinding Content}"
                                                      Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=View.Columns}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowSel}"/>
                                <Setter TargetName="RowOuter" Property="BorderBrush" Value="{StaticResource Col.RowSelBorder}"/>
                                <Setter TargetName="RowOuter" Property="BorderThickness" Value="1"/>
                                <Setter TargetName="SelBar" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowWarnBg}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                <Setter TargetName="RowOuter" Property="Background" Value="{StaticResource Col.RowDangerBg}"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Read-only details template (unchanged) -->
        <DataTemplate x:Key="InventoryReadOnlyTemplate">
            <Border Padding="12" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_ItemIDLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ItemID}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_ItemTypeLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ItemType}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_AvailableQtyLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalQuantity}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_UsedQtyLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding UsedQuantity}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_LowThresholdLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding LowStockThreshold}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_LastRestockedLabel}" FontWeight="SemiBold" Margin="0,0,8,6"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LastRestockedDate}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="{x:Static res:Strings.Inv_Detail_NoteLabel}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Note}" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <!-- ========== LAYOUT ========== -->
    <Border Background="{StaticResource Col.BgPage}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBox x:Name="SearchBox"
                         Style="{StaticResource SearchBoxStyle}"
                         Width="320"
                         VerticalContentAlignment="Center"
                         Foreground="{StaticResource Col.TextMut}"
                         FontStyle="Italic"
                         Text="{x:Static res:Strings.Inv_SearchPlaceholder}"
                         Tag="{x:Static res:Strings.Inv_SearchPlaceholder}"
                         GotFocus="ClearText"
                         LostFocus="ResetText"
                         TextChanged="SearchBox_TextChanged"
                         DockPanel.Dock="Left"/>

                <!-- Column chooser -->
                <Button x:Name="ColumnFilterButton"
                        Style="{StaticResource ChipButton}"
                        Tag="Columns"
                        Content="All ▾"
                        DockPanel.Dock="Left"
                        Click="ColumnFilterButton_Click"/>

                <Popup x:Name="ColumnPopup"
                       PlacementTarget="{Binding ElementName=ColumnFilterButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       Closed="ColumnPopup_Closed">
                    <Border Background="White" BorderBrush="{StaticResource Col.Border}"
                            BorderThickness="1" CornerRadius="10" Padding="8">
                        <StackPanel Width="240">
                            <TextBlock Text="Choose columns" FontWeight="Bold" Margin="4,0,4,6"/>
                            <ScrollViewer MaxHeight="260" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- ID removed -->
                                    <CheckBox Content="Order" Tag="DisplayOrder" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Item Type" Tag="ItemType" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Available Qty" Tag="TotalQuantity" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Used Qty" Tag="UsedQuantity" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Low Threshold" Tag="LowStockThreshold" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Last Restocked" Tag="LastRestockedDate" Margin="4" Click="ColumnCheckBox_Click"/>
                                    <CheckBox Content="Note" Tag="Note" Margin="4" Click="ColumnCheckBox_Click"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Separator Margin="0,6,0,6"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Select all" Margin="4" Click="SelectAllColumns_Click"/>
                                <Button Content="Clear" Margin="4" Click="ClearAllColumns_Click"/>
                                <Button Content="OK" Margin="4" Click="OkColumns_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>

                <Button x:Name="AddInventoryButton"
                        Content="{x:Static res:Strings.Inv_NewItem}"
                        Style="{StaticResource ActionButtonStyle}"
                        Width="150"
                        DockPanel.Dock="Right"
                        Click="AddInventoryButton_Click"/>
            </DockPanel>

            <!-- Table -->
            <Border Grid.Row="1"
                    Background="{StaticResource Col.BgCard}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Col.Border}"
                    BorderThickness="1"
                    Padding="8">
                <Grid>
                    <ListView x:Name="InventoryListView"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              SelectionMode="Single"
                              MouseDoubleClick="InventoryListView_MouseDoubleClick">
                        <ListView.View>
                            <GridView AllowsColumnReorder="True">
                                <!-- ID column removed -->

                                <!-- Display # -> Order -->
                                <GridViewColumn Header="Order" Width="90">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding DisplayOrder}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_ItemType}" Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding ItemType}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_AvailableQty}" Width="110">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding TotalQuantity}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_UsedQty}" Width="110">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding UsedQuantity}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_LowThreshold}" Width="130">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding LowStockThreshold}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_LastRestocked}" Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}" Text="{Binding LastRestockedDate}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Reorder arrows (header stays "Order" as before) -->
                                <GridViewColumn Header="Order" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Button Style="{StaticResource ArrowBtn}"
                                                        Content="▲"
                                                        ToolTip="Move up"
                                                        Click="MoveUp_Click"
                                                        CommandParameter="{Binding}"/>
                                                <Button Style="{StaticResource ArrowBtn}"
                                                        Content="▼"
                                                        ToolTip="Move down"
                                                        Click="MoveDown_Click"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Row actions -->
                                <GridViewColumn Header="" Width="230">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" Height="1"/>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Button Content="{x:Static res:Strings.Inv_Action_Restock}"
                                                        Tag="＋"
                                                        Background="{StaticResource Col.Green}"
                                                        Style="{StaticResource RowPillButton}"
                                                        Click="Restock_Click"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="{x:Static res:Strings.Inv_Action_Use}"
                                                        Tag="–"
                                                        Background="{StaticResource Col.Red}"
                                                        Click="Use_Click"
                                                        CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource RowPillButton}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static res:Strings.Inv_Column_Note}" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource CellText}"
                                                       Text="{Binding Note}"
                                                       ToolTip="{Binding Note}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Empty state -->
                    <TextBlock Text="{x:Static res:Strings.Inv_EmptyState}"
                               Foreground="{StaticResource Col.TextMut}"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=InventoryListView, Path=HasItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
