<!-- MainWindow.xaml -->
<Window x:Class="HouseholdMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:HouseholdMS.Resources"
        mc:Ignorable="d"
        Title="{x:Static res:Strings.App_Title}"
        Height="500"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F2F5FA"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Modern solar blues -->
        <SolidColorBrush x:Key="Navy900" Color="#0B2B5A"/>
        <SolidColorBrush x:Key="Navy800" Color="#103A78"/>
        <SolidColorBrush x:Key="Navy700" Color="#18519F"/>
        <SolidColorBrush x:Key="Navy600" Color="#2466C2"/>
        <SolidColorBrush x:Key="Navy500" Color="#2D7BE6"/>
        <SolidColorBrush x:Key="CyanAccent" Color="#35C4FF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#C7D6EE"/>

        <!-- Sidebar background -->
        <LinearGradientBrush x:Key="SidebarBg" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#103A78" Offset="0"/>
            <GradientStop Color="#0B2B5A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Navbar -->
        <LinearGradientBrush x:Key="NavBarBg" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F5F9FF" Offset="0"/>
            <GradientStop Color="#EEF4FF" Offset="0.55"/>
            <GradientStop Color="#E9F1FF" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="NavBarBorder" Color="#E1E8F7"/>

        <!-- Top navbar buttons -->
        <Style x:Key="TopNavButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="96"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="#0B2B5A"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E4EAF5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Navy600}"/>
                                <Setter Property="Foreground" Value="{StaticResource Navy800}"/>
                                <Setter Property="Background" Value="#F8FBFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="Background" Value="#F7F7F7"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar buttons -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#16498E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#123D77"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CB7DC"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="10,12,10,8"/>
            <Setter Property="Background" Value="{StaticResource Navy700}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Navy900}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <DockPanel LastChildFill="True">
                                <Border Background="{StaticResource CyanAccent}"
                                        Width="4" Height="Auto"
                                        CornerRadius="4,0,0,4"
                                        Margin="-12,0,12,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Navy600}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource Navy800}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#C7D6EE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#EAF2FF"/>
            <Setter Property="Margin" Value="26,2,10,2"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <DockPanel LastChildFill="True">
                                <Border Background="#FFFFFF22"
                                        Width="2" Height="Auto"
                                        CornerRadius="2"
                                        Margin="-6,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A4F95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#123D77"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CB7DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarCaption" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="26,10,10,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform
                ScaleX="{DynamicResource AppUiScale}"
                ScaleY="{DynamicResource AppUiScale}"/>
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{StaticResource NavBarBg}"
                BorderBrush="{StaticResource NavBarBorder}"
                BorderThickness="0,0,0,1"
                Padding="12,10"
                MinHeight="64">
            <Border.Effect>
                <DropShadowEffect Color="#1A2B4A" BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: logo -->
                <Viewbox Height="44"
                         Stretch="Uniform"
                         StretchDirection="DownOnly"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center">
                    <Image Source="/Assets/MainMenuPics/mainpic.png"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           ToolTip="{x:Static res:Strings.App_Title}"/>
                </Viewbox>

                <!-- Right: user + buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="34" Margin="0,0,10,0">
                        <TextBlock Text="👤" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding CurrentUsername}"
                                   Foreground="{StaticResource Navy800}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Height="34"
                            MinWidth="80"
                            CornerRadius="17"
                            Background="#E9F3FF"
                            BorderBrush="{StaticResource Navy600}"
                            BorderThickness="1"
                            Padding="12,0"
                            Margin="0,0,12,0"
                            VerticalAlignment="Center">
                        <Viewbox Stretch="Uniform" StretchDirection="DownOnly" Height="18">
                            <TextBlock Text="{Binding CurrentUserRole}"
                                       Foreground="{StaticResource Navy700}"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Viewbox>
                    </Border>

                    <Button x:Name="bt_SettingMenu"
                            Content="{x:Static res:Strings.Nav_Settings}"
                            Click="bt_SettingMenu_Click"
                            Style="{StaticResource TopNavButtonStyle}"/>
                    <Button Content="{x:Static res:Strings.Nav_Logout}"
                            Click="Logout_Click"
                            Style="{StaticResource TopNavButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Grid Grid.Row="1" Grid.Column="0" Background="{StaticResource SidebarBg}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10,16,10,8">
                <TextBlock Text="{x:Static res:Strings.Sidebar_MainMenu}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="5,0,0,8"/>
                <Border Height="1" Background="#FFFFFF33" Margin="5,0,5,0"/>
            </StackPanel>

            <!-- Accordion -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Dashboard -->
                    <Button x:Name="bt_Dashboard"
                            Content="{x:Static res:Strings.Section_Dashboard}"
                            Click="bt_Dashboard_Click"
                            Style="{StaticResource SectionHeaderButtonStyle}"/>

                    <StackPanel x:Name="Panel_Dashboard" Visibility="Visible">
                        <TextBlock Text="{x:Static res:Strings.Dashboard_Sections}" Style="{StaticResource SidebarCaption}"/>
                        <Button Content="{x:Static res:Strings.Menu_Sites}" Click="bt_SiteMenu" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button Content="{x:Static res:Strings.Menu_Inventory}" Click="bt_InventoryMenu" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button Content="{x:Static res:Strings.Menu_ServiceRecords}" Click="bt_ServiceMenu" Style="{StaticResource SubMenuButtonStyle}"/>
                    </StackPanel>

                    <Border Height="8"/>

                    <!-- Test Procedures -->
                    <Button x:Name="Header_TestManuals"
                            Content="{x:Static res:Strings.Section_TestProcedures}"
                            Click="Header_TestManuals_Click"
                            Style="{StaticResource SectionHeaderButtonStyle}"/>

                    <StackPanel x:Name="Panel_TestManuals" Visibility="Collapsed">
                        <TextBlock Text="{x:Static res:Strings.TestManuals_TestModules}" Style="{StaticResource SidebarCaption}"/>
                        <Button x:Name="bt_TestProcedure" Content="{x:Static res:Strings.Menu_TestProcedure}" Click="bt_TestProcedure_Click" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button x:Name="bt_ControllerTest" Content="{x:Static res:Strings.Menu_ControllerTest}" Click="bt_ControllerTest_Click" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button x:Name="bt_SwitchTest" Content="{x:Static res:Strings.Menu_SwitchTest}" Click="bt_SwitchTest_Click" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button x:Name="bt_AllTest" Content="{x:Static res:Strings.Menu_BlueSmartCharger}" Click="bt_AllTest_Click" Style="{StaticResource SubMenuButtonStyle}" Cursor="Hand"/>
                        <Button x:Name="bt_K4BatteryBalancing"
                                Content="{x:Static res:Strings.Menu_K4BatteryBalancing}"
                                Click="bt_K4BatteryBalancing_Click"
                                Style="{StaticResource SubMenuButtonStyle}"
                                Cursor="Hand"/>
                        <Button x:Name="bt_TestReports" Content="{x:Static res:Strings.Menu_TestReports}" Click="bt_TestReports_Click" Style="{StaticResource SubMenuButtonStyle}" Visibility="Collapsed"/>
                    </StackPanel>

                    <Border Height="8"/>

                    <!-- Monitoring (HEADER) -->
                    <Button x:Name="Header_Monitoring"
                            Content="{x:Static res:Strings.Section_Monitoring}"
                            Click="Header_Monitoring_Click"
                            Style="{StaticResource SectionHeaderButtonStyle}"/>

                    <!-- Monitoring SUBMENU (now immediately under header) -->
                    <StackPanel x:Name="Panel_Monitoring" Visibility="Collapsed">
                        <TextBlock Text="{x:Static res:Strings.Monitoring_LiveInstruments}" Style="{StaticResource SidebarCaption}"/>
                        <Button x:Name="bt_BatteryTest" Content="{x:Static res:Strings.Menu_MpptMonitoring}" Click="bt_BatteryTest_Click" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button Content="{x:Static res:Strings.Menu_Oscilloscope}" Click="bt_OscilloscopeMenu" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button Content="{x:Static res:Strings.Menu_Multimeter}" Click="bt_MeasurementMenu" Style="{StaticResource SubMenuButtonStyle}"/>
                        <Button Content="{x:Static res:Strings.Menu_ElectronicLoad}" Click="Button_Click_ElectronicLoad" Style="{StaticResource SubMenuButtonStyle}"/>
                    </StackPanel>

                    <!-- Manage Users (kept as standalone header AFTER Monitoring panel) -->
                    <Border Height="8"/>
                    <Button x:Name="NavManageUsersBtn"
                            Content="{x:Static res:Strings.Menu_ManageUsers}"
                            Click="bt_ManageUsers"
                            Style="{StaticResource SectionHeaderButtonStyle}"
                            Visibility="Collapsed"/>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" Background="White"
                CornerRadius="10"
                BorderBrush="#DFE5F1"
                BorderThickness="1"
                Padding="10">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </Grid>
</Window>
